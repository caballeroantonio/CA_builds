<form
    addfieldpath="/components/com_boletin/models/fields"
    addrulepath="/components/com_boletin/models/rules"
>
    <fieldset>
        <field
			id="id"
			name="id"
			type="hidden"
			label="COM_BOLETIN_ID_LABEL"
			class="readonly"
			default="0"
			readonly="true"
		/>


        <field
		    id="description"
		    name="description"
			type="editor"
			label="JGLOBAL_DESCRIPTION"
			description="COM_BOLETIN_TFCA_BACUERDOS_FIELD_DESCRIPTION_DESC"
			class="inputbox"
            filter="JComponentHelper::filterText"
			buttons="true"
            hide="article,pagebreak"                
		/>
    </fieldset>
    <fieldset
        name="fieldset_tfca_bacuerdo_fs"
        label="COM_BOLETIN_TFCA_BACUERDOS_FIELDSET_TFCA_BACUERDO_FS_LABEL"
    >

        <field
            id="instancia"
            name="instancia"
            type="text"
            label="COM_BOLETIN_TFCA_BACUERDOS_FIELD_INSTANCIA_LABEL"
            description="COM_BOLETIN_TFCA_BACUERDOS_FIELD_INSTANCIA_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="fecha"
            name="fecha"
            type="calendar"
            label="COM_BOLETIN_TFCA_BACUERDOS_FIELD_FECHA_LABEL"
            description="COM_BOLETIN_TFCA_BACUERDOS_FIELD_FECHA_DESC"
            class="inputbox"
			size="22"
			maxlength="25"
			format="%Y-%m-%d"
			filter="user_utc"
			required="true"
        >
        </field>  
        <field
            id="expediente"
            name="expediente"
            type="text"
            label="COM_BOLETIN_TFCA_BACUERDOS_FIELD_EXPEDIENTE_LABEL"
            description="COM_BOLETIN_TFCA_BACUERDOS_FIELD_EXPEDIENTE_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="actor"
            name="actor"
            type="text"
            label="COM_BOLETIN_TFCA_BACUERDOS_FIELD_ACTOR_LABEL"
            description="COM_BOLETIN_TFCA_BACUERDOS_FIELD_ACTOR_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
    </fieldset>
</form>
