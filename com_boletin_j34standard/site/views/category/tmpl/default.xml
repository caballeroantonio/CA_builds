<metadata>
	<layout
	    title="COM_BOLETIN_CATEGORY_VIEW_DEFAULT_TITLE"
	    option="COM_BOLETIN_CATEGORY_VIEW_DEFAULT_OPTION"
	>
        <message>
			<![CDATA[COM_BOLETIN_CATEGORY_VIEW_DESC]]>
		</message>
	</layout>
	<!-- Add fields to the request variables for the layout. -->
	<fields
	    name="request"
	>
		<fieldset
		    name="request"
		>
			<field
			    name="id"
			    type="categoryedit"
				label="JGLOBAL_CHOOSE_CATEGORY_LABEL"
    		description="JGLOBAL_CHOOSE_CATEGORY_DESC"
				extension="com_boletin"
				required="true"
                addfieldpath="/administrator/components/com_categories/models/fields"
			/>
		</fieldset>
	</fields>
    <!-- Add fields to the parameters object for the layout. -->
    <fields
        name="params"
    >
        <fieldset
            name="category_settings"
            label="JGLOBAL_CATEGORY_OPTIONS"
        >
            <field
			    name="show_cat_title"
			    type="radio"
				label="JGLOBAL_SHOW_CATEGORY_TITLE"
    			description="JGLOBAL_SHOW_CATEGORY_TITLE_DESC"
                class="btn-group"            
			>
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="1">JSHOW</option>
                <option value="0">JHIDE</option>
            </field>
            <field
                name="cat_page_subheading"
                type="text"
				label="JGLOBAL_SUBHEADING_LABEL"
    			description="JGLOBAL_SUBHEADING_DESC"
				size="20"
			/>
            <field
			    name="show_cat_description"
			    type="radio"
				label="JGLOBAL_SHOW_CATEGORY_DESCRIPTION_LABEL"
    			description="JGLOBAL_SHOW_CATEGORY_DESCRIPTION_DESC"
                class="btn-group"            
			>
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="1">JSHOW</option>
                <option value="0">JHIDE</option>
            </field>
            <field
			    name="show_cat_description_image"
			    type="radio"
				label="JGLOBAL_SHOW_CATEGORY_IMAGE_LABEL"
    			description="JGLOBAL_SHOW_CATEGORY_IMAGE_DESC"
                class="btn-group"            
            >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="1">JSHOW</option>
                <option value="0">JHIDE</option>
            </field>
            <field
                name="show_cat_subcat_heading"
                type="radio"
                label="JGLOBAL_SHOW_CATEGORY_HEADING_TITLE_TEXT_LABEL"
                description="JGLOBAL_SHOW_CATEGORY_HEADING_TITLE_TEXT_DESC"
			    class="btn-group"
			>
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="1">JSHOW</option>
                <option value="0">JHIDE</option>
            </field>
            <field
                name="show_empty_cat"
                type="radio"
				label="JGLOBAL_SHOW_EMPTY_CATEGORIES_LABEL"
    			description="COM_BOLETIN_SHOW_EMPTY_CATEGORIES_DESC"
                class="btn-group"            
			>
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="1">JSHOW</option>
                <option value="0">JHIDE</option>
            </field>
            <field
			    name="show_subcat_desc"
			    type="radio"
			    label="JGLOBAL_SHOW_SUBCATEGORIES_DESCRIPTION_LABEL"
				description="JGLOBAL_SHOW_SUBCATEGORIES_DESCRIPTION_DESC"
                class="btn-group"            
			>
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="1">JSHOW</option>
                <option value="0">JHIDE</option>
            </field>
            <field
                name="show_categories_max_level"
                type="list"
 				label="JGLOBAL_MAXIMUM_CATEGORY_LEVELS_LABEL"
    			description="JGLOBAL_MAXIMUM_CATEGORY_LEVELS_DESC"
			    class="chzn-color"
			>
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="-1">JALL</option>
                <option value="1">J1</option>
                <option value="2">J2</option>
                <option value="3">J3</option>
                <option value="4">J4</option>
                <option value="5">J5</option>
            </field>
            <field
                name="items_to_display"
                type="list"
			    label="COM_BOLETIN_CATEGORY_ITEMS_TO_DISPLAY_LABEL"
				description="COM_BOLETIN_CATEGORY_ITEMS_TO_DISPLAY_DESC"
			    class="chzn-color"
			>
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="">JNONE</option>
                <option value="Acuerdos Fiscales Del TFJFA">COM_BOLETIN_TFJFA_BACUERDOS</option>

            </field>
            <field
                name="show_cat_num_items"
                type="radio"
                label="COM_BOLETIN_NUMBER_CATEGORY_ITEMS_LABEL"
                description="COM_BOLETIN_NUMBER_CATEGORY_ITEMS_DESC"
                class="btn-group"            
			>
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="1">JSHOW</option>
                <option value="0">JHIDE</option>
            </field>
        </fieldset>
        <fieldset
            name="integration"
            label="JGLOBAL_INTEGRATION_LABEL"
		>
            <field
			    name="show_feed_link"
			    type="radio"
				label="JGLOBAL_SHOW_FEED_LINK_LABEL"
    			description="JGLOBAL_SHOW_FEED_LINK_DESC"
                class="btn-group"            
				default="1"
			>
                <option value="1">JSHOW</option>
                <option value="0">JHIDE</option>
            </field>
            <field
			    name="feed_summary"
			    type="radio"
				label="COM_BOLETIN_CATEGORIES_FEED_SUMMARY_LABEL"
    			description="COM_BOLETIN_CATEGORIES_FEED_SUMMARY_DESC"
                class="btn-group"            
				default="0"
			>
                <option value="0">JGLOBAL_INTRO_TEXT</option>
                <option value="1">JGLOBAL_FULL_TEXT</option>
            </field>
        </fieldset>
    </fields>
</metadata>
