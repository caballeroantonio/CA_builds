<form
    addfieldpath="/administrator/components/com_boletin/models/fields"
    addrulepath="/administrator/components/com_boletin/models/rules"

>
    <fieldset name="basic_details"
    >
        <field name="buttonspacer"
            type="spacer"
            label="JGLOBAL_ACTION_PERMISSIONS_LABEL"
            description="JGLOBAL_ACTION_PERMISSIONS_DESCRIPTION"
        />
        <field
		    name="description"
            type="editor"
			label="JGLOBAL_DESCRIPTION"
            description="COM_BOLETIN_PRODECON_BACUERDOS_FIELD_DESCRIPTION_DESC"
            filter="JComponentHelper::filterText"
            buttons="true"
            hide="article,pagebreak"                
        />
    </fieldset>
    <fieldset name="fieldset_prodecon_bacuerdo_fs"
        label="COM_BOLETIN_PRODECON_BACUERDOS_FIELDSET_PRODECON_BACUERDO_FS_LABEL"
        description="COM_BOLETIN_PRODECON_BACUERDOS_FIELDSET_PRODECON_BACUERDO_FS_DESC"
    >
        <field name="id_delegacion"
            type="text"
            label="COM_BOLETIN_PRODECON_BACUERDOS_FIELD_ID_DELEGACION_LABEL"
            description="COM_BOLETIN_PRODECON_BACUERDOS_FIELD_ID_DELEGACION_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field name="expediente"
            type="text"
            label="COM_BOLETIN_PRODECON_BACUERDOS_FIELD_EXPEDIENTE_LABEL"
            description="COM_BOLETIN_PRODECON_BACUERDOS_FIELD_EXPEDIENTE_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field name="promovente"
            type="text"
            label="COM_BOLETIN_PRODECON_BACUERDOS_FIELD_PROMOVENTE_LABEL"
            description="COM_BOLETIN_PRODECON_BACUERDOS_FIELD_PROMOVENTE_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field name="destinatario"
            type="text"
            label="COM_BOLETIN_PRODECON_BACUERDOS_FIELD_DESTINATARIO_LABEL"
            description="COM_BOLETIN_PRODECON_BACUERDOS_FIELD_DESTINATARIO_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field name="autoridades"
            type="text"
            label="COM_BOLETIN_PRODECON_BACUERDOS_FIELD_AUTORIDADES_LABEL"
            description="COM_BOLETIN_PRODECON_BACUERDOS_FIELD_AUTORIDADES_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field name="fecha"
            type="calendar"
            label="COM_BOLETIN_PRODECON_BACUERDOS_FIELD_FECHA_LABEL"
            description="COM_BOLETIN_PRODECON_BACUERDOS_FIELD_FECHA_DESC"
            class="inputbox"
			size="22"
			maxlength="25"
			format="%Y-%m-%d"
			filter="user_utc"
			required="true"
        >
        </field>  
    </fieldset>
    <fieldset name="publishing"
		label="COM_BOLETIN_FIELDSET_PUBLISHING_LABEL"
    >

    </fieldset>
</form>
