<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_BOLETIN_TSJCDMX_JUZGADOS_CIVILES_ANTIGUOS_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>
        <field
			name="id_acuerdo"
			type="sql"
			label="COM_BOLETIN_FILTER_ID_ACUERDO_LABEL"
			description="COM_BOLETIN_FILTER_ID_ACUERDO_DESC"
			onchange="this.form.submit();"
			query="SELECT DISTINCT `a`.`ID_ACUERDO` AS `value`, `a`.`ID_ACUERDO` AS `text`
		            FROM `#__boletin_tsjcdmx_juzgados_civiles_antiguos` AS `a` 
		            ORDER BY `a`.`ID_ACUERDO`"
			key_field="value"
			value_field="text"
		>
            <option value="">COM_BOLETIN_TSJCDMX_JUZGADOS_CIVILES_ANTIGUOS_SELECT_ID_ACUERDO</option>
        </field>
    </fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="JGLOBAL_SORT_BY"
			onchange="this.form.submit();"
			default=""
		>
			<option value="">JGLOBAL_SORT_BY</option>
            <option value="a.id_acuerdo ASC">COM_BOLETIN_TSJCDMX_JUZGADOS_CIVILES_ANTIGUOS_FIELD_ID_ACUERDO_SORT_ASC_LABEL</option>
            <option value="a.id_acuerdo DESC">COM_BOLETIN_TSJCDMX_JUZGADOS_CIVILES_ANTIGUOS_FIELD_ID_ACUERDO_SORT_DESC_LABEL</option>
			<option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
        </field>
        <field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_BOLETIN_LIST_LIMIT_LABEL"
			description="COM_BOLETIN_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
