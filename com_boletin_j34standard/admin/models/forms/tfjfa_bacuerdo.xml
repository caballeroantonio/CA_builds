<form
    addfieldpath="/administrator/components/com_boletin/models/fields"
    addrulepath="/administrator/components/com_boletin/models/rules"

>
    <fieldset name="basic_details"
    >
        <field name="id"
		    type="text"
            label="JGLOBAL_FIELD_ID_LABEL"
            description ="JGLOBAL_FIELD_ID_DESC"
			readonly="true"
			class="readonly"
            default="0"
		/>
        <field name="catid"
            type="categoryedit"
			label="JCATEGORY"
			description="JFIELD_CATEGORY_DESC"
            extension="com_boletin"
			required="true"
            addfieldpath="/administrator/components/com_categories/models/fields"
		>
        </field>
        <field name="buttonspacer"
            type="spacer"
            label="JGLOBAL_ACTION_PERMISSIONS_LABEL"
            description="JGLOBAL_ACTION_PERMISSIONS_DESCRIPTION"
        />

        <field name="ordering"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"
			type="boletinordering"
			table="#__boletin_tfjfa_bacuerdos"
		/>
    </fieldset>
    <fieldset name="fieldset_tfjfa_bacuerdo_fs"
        label="COM_BOLETIN_TFJFA_BACUERDOS_FIELDSET_TFJFA_BACUERDO_FS_LABEL"
        description="COM_BOLETIN_TFJFA_BACUERDOS_FIELDSET_TFJFA_BACUERDO_FS_DESC"
    >
        <field name="fecha_boletin"
            type="calendar"
            label="COM_BOLETIN_TFJFA_BACUERDOS_FIELD_FECHA_BOLETIN_LABEL"
            description="COM_BOLETIN_TFJFA_BACUERDOS_FIELD_FECHA_BOLETIN_DESC"
            class="inputbox"
			size="22"
			maxlength="25"
			format="Y-m-d"
			filter="user_utc"
			required="true"
        >
        </field>  
        <field name="region"
            type="text"
            label="COM_BOLETIN_TFJFA_BACUERDOS_FIELD_REGION_LABEL"
            description="COM_BOLETIN_TFJFA_BACUERDOS_FIELD_REGION_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field name="instancia"
            type="text"
            label="COM_BOLETIN_TFJFA_BACUERDOS_FIELD_INSTANCIA_LABEL"
            description="COM_BOLETIN_TFJFA_BACUERDOS_FIELD_INSTANCIA_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field name="expediente"
            type="text"
            label="COM_BOLETIN_TFJFA_BACUERDOS_FIELD_EXPEDIENTE_LABEL"
            description="COM_BOLETIN_TFJFA_BACUERDOS_FIELD_EXPEDIENTE_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field name="actor"
            type="text"
            label="COM_BOLETIN_TFJFA_BACUERDOS_FIELD_ACTOR_LABEL"
            description="COM_BOLETIN_TFJFA_BACUERDOS_FIELD_ACTOR_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field name="parte_a_notificar"
            type="text"
            label="COM_BOLETIN_TFJFA_BACUERDOS_FIELD_PARTE_A_NOTIFICAR_LABEL"
            description="COM_BOLETIN_TFJFA_BACUERDOS_FIELD_PARTE_A_NOTIFICAR_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field name="auto_o_resolucion"
            type="text"
            label="COM_BOLETIN_TFJFA_BACUERDOS_FIELD_AUTO_O_RESOLUCION_LABEL"
            description="COM_BOLETIN_TFJFA_BACUERDOS_FIELD_AUTO_O_RESOLUCION_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
    </fieldset>
    <fieldset name="publishing"
		label="COM_BOLETIN_FIELDSET_PUBLISHING_LABEL"
    >
    </fieldset>
</form>
