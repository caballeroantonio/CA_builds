<extension type="plugin" version="3.4" group="search" method="upgrade">
	<name>plg_search_houses</name>
    <author>caballeroantonio</author>
    <creationDate>March 2018</creationDate>
    <copyright>
    </copyright>
    <license>
        GNU General Public License version 3 or later; See http://www.gnu.org/copyleft/gpl.html
    </license>
    <authorEmail>caballeroantonio@hotmail.com</authorEmail>
    <authorUrl>caballeroantonio.com</authorUrl>
    <version>1.0.0</version>
	<description>PLG_SEARCH_HOUSES_XML_DESCRIPTION</description>
	<files>
		<filename plugin="houses">houses.php</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_search_houses.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_search_houses.sys.ini</language>
	</languages>
	<config>
		<fields
		    name="params"
		>

			<fieldset
			    name="basic-options"
               label="PLG_SEARCH_HOUSES_PARAMETERS"
			    
			>
                <field
                    name="layout"
                    type="componentlayout"
                    label="JGLOBAL_FIELD_LAYOUT_LABEL"
                    description="COM_REMCA_HOUSES_CHOOSE_LAYOUT_DESC"
                    menuitems="true"
                    extension="com_remca"
                    view="house"
                    default="_:default"
		        />
     
                <field
				    name="search_limit"
				    type="text"
					label="PLG_SEARCH_HOUSES_FIELD_SEARCHLIMIT_LABEL"
					description="PLG_SEARCH_HOUSES_FIELD_SEARCHLIMIT_DESC"
					default="50"
					size="5"
				/>
                <field
                    name="search_houses"
                    type="radio"
					label="PLG_SEARCH_HOUSES_FIELD_LABEL"
					description="PLG_SEARCH_HOUSES_FIELD_DESC"
					default="1"
				>
                    <option value="1">JON</option>
                    <option value="0">JOFF</option>
				</field>


                <field
				    name="search_archived_houses"
				    type="radio"
					label="PLG_SEARCH_HOUSES_FIELD_ARCHIVED_LABEL"
					description="PLG_SEARCH_HOUSES_FIELD_ARCHIVED_DESC"
					default="0"
				>
                    <option value="1">JON</option>
                    <option value="0">JOFF</option>
                </field>
                <field
					name="itemid"
					type="menuitem"
					disable="separator"
					label="PLG_SEARCH_HOUSES_FIELD_ITEMID_LABEL"
					description="PLG_SEARCH_HOUSES_FIELD_ITEMID_DESC" >
                    <option
						value="">JDEFAULT</option>
                </field>				
            </fieldset>

		</fields>
	</config>
</extension>
