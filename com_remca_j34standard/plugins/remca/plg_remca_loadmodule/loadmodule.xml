    <name>plg_remca_loadmodule</name>
    <author>caballeroantonio</author>
    <creationDate>June 2018</creationDate>
    <copyright>
    </copyright>
    <license>
        GNU General Public License version 3 or later; See http://www.gnu.org/copyleft/gpl.html
    </license>
    <authorEmail>caballeroantonio@hotmail.com</authorEmail>
    <authorUrl>caballeroantonio.com</authorUrl>
    <version>1.0.0</version>
    <description>PLG_REMCA_LOADMODULE_XML_DESCRIPTION</description>
	<files>
		<filename plugin="loadmodule">loadmodule.php</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_remca_loadmodule.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_remca_loadmodule.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
            <fieldset
                name="house_settings"
				label="PLG_REMCA_HOUSES_LOADMODULE_FIELDSET_LABEL"
                description="PLG_REMCA_HOUSES_LOADMODULE_FIELDSET_DESC"
              >
                <field
                    name="house_style"
                    type="list"
					label="PLG_REMCA_LOADMODULE_FIELD_STYLE_LABEL"
                    description="PLG_REMCA_HOUSES_LOADMODULE_FIELD_STYLE_DESC"
                    default="table"
                >
                    <option value="table">PLG_REMCA_LOADMODULE_FIELD_VALUE_TABLE</option>
                    <option value="horz">PLG_REMCA_LOADMODULE_FIELD_VALUE_HORIZONTAL</option>
                    <option value="xhtml">PLG_REMCA_LOADMODULE_FIELD_VALUE_DIVS</option>
                    <option value="rounded">PLG_REMCA_LOADMODULE_FIELD_VALUE_MULTIPLEDIVS</option>
                    <option value="none">PLG_REMCA_LOADMODULE_FIELD_VALUE_RAW</option>
                </field>
            </fieldset>
        </fields>
	</config>
</extension>
