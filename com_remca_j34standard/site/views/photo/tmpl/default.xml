<metadata>
	<layout
	    title="COM_REMCA_PHOTOS_VIEW_ITEM_DEFAULT_TITLE"
	    option="COM_REMCA_PHOTOS_VIEW_ITEM_DEFAULT_OPTION"
	>
        <message>
			<![CDATA[COM_REMCA_PHOTOS_VIEW_ITEM_DEFAULT_DESC]]>
		</message>
	</layout>
	<!-- Add fields to the request variables for the layout. -->
	<fields
	    name="request"
	>
		<fieldset
		    name="request"
			addfieldpath="/administrator/components/com_remca/models/fields"
		>
			<field
			    name="id"
			    type="modal_photos"
				label="COM_REMCA_PHOTOS_SELECT_ITEM_LABEL"
				description="COM_REMCA_PHOTOS_SELECT_ITEM_DESC"
				required="true"
				edit="true"
				clear="false"				
			/>
		</fieldset>
	</fields>
    <!-- Add fields to the parameters object for the layout. -->
    <fields
	    name="params"
	>
        <!-- Basic options. -->
        <fieldset
            name="photo_basic_settings"
            label="COM_REMCA_PHOTOS_FIELDSET_LAYOUT"
        >
            <field
                name="show_photo_icons"
                type="radio"
                label="COM_REMCA_SHOW_ICONS_LABEL"
                description="COM_REMCA_SHOW_ICONS_DESC"
                class="btn-group"            
		    >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option	value="0">COM_REMCA_SHOW_ICONS_VALUE_TEXT</option>
                <option	value="1">COM_REMCA_SHOW_ICONS_VALUE_ICONS</option>
                <option	value="-1">JHIDE</option>
            </field>
            <field
                name="show_photo_print_icon"
                type="radio"
                label="COM_REMCA_SHOW_PRINT_ICON_LABEL"
                description="COM_REMCA_SHOW_PRINT_ICON_DESC"
                class="btn-group"            
		    >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="1">JSHOW</option>
                <option value="0">JHIDE</option>
            </field>
            <field
                name="show_photo_email_icon"
                type="radio"
                label="COM_REMCA_SHOW_EMAIL_ICON_LABEL"
                description="COM_REMCA_PHOTOS_SHOW_EMAIL_ICON_DESC"
                class="btn-group"            
		    >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="1">JSHOW</option>
                <option value="0">JHIDE</option>
            </field>
            <field
		        name="photo_info_block_position"
		        type="radio"
		        label="COM_REMCA_PHOTOS_INFOBLOCK_POSITION_LABEL"
		        description="COM_REMCA_PHOTOS_INFOBLOCK_POSITION_DESC"
                class="btn-group"            
	        >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="0">COM_REMCA_VALUE_ABOVE</option>
                <option value="1">COM_REMCA_VALUE_BELOW</option>
            </field>            
            <field
                name="keep_photo_itemid"
                type="radio"
                label="COM_REMCA_KEEP_ITEMID_LABEL"
                description="COM_REMCA_PHOTOS_KEEP_ITEMID_DESC"
                class="btn-group"            
		    >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option	value="1">JYES</option>
                <option	value="0">JNO</option>
            </field>
            <field
                name="show_photo_navigation"
                type="radio"
                label="COM_REMCA_SHOW_NAVIGATION_LABEL"
                description="COM_REMCA_PHOTOS_SHOW_NAVIGATION_DESC"
                class="btn-group"            
            >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="1">JSHOW</option>
                <option value="0">JHIDE</option>
            </field>
            <field
                name="spacer2"
                type="spacer"
                hr="true"
			/>
            <field
                name="show_photo_readmore"
                type="radio"
                label="COM_REMCA_SHOW_READMORE_LABEL"
                description="COM_REMCA_PHOTOS_SHOW_READMORE_DESC"
                class="btn-group"            
		    >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="1">JSHOW</option>
                <option value="0">JHIDE</option>
            </field>
            <field
                name="photo_readmore_limit"
                type="text"
                label="COM_REMCA_SHOW_READMORE_LIMIT_LABEL"
                description="COM_REMCA_PHOTOS_SHOW_READMORE_LIMIT_DESC"
                default="100"
	        />
        </fieldset>
        <fieldset
            name="photo_field_settings"
	        label="COM_REMCA_PHOTOS_FIELDSET_FIELDS"
	    >
            <field
                name="show_photo_image"
                type="radio"
                label="COM_REMCA_SHOW_IMAGE_LABEL"
                description="COM_REMCA_PHOTOS_SHOW_IMAGE_DESC"
                class="btn-group"
            >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="1">JSHOW</option>
                <option value="0">JHIDE</option>
            </field>
            <field
                name="show_photo_image_float"
                type="radio"
                label="COM_REMCA_SHOW_IMAGE_FLOAT_LABEL"
                description="COM_REMCA_SHOW_IMAGE_FLOAT_DESC"
                class="btn-group"
            >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="right">COM_REMCA_VALUE_FLOAT_RIGHT</option>
                <option value="left">COM_REMCA_VALUE_FLOAT_LEFT</option>
                <option value="none">COM_REMCA_VALUE_FLOAT_NONE</option>
            </field>
            <field
                name="show_photo_image_width"
                type="text"
                label="COM_REMCA_SHOW_IMAGE_WIDTH_LABEL"
                description="COM_REMCA_PHOTOS_SHOW_IMAGE_WIDTH_DESC"
                class="validate-numeric"
                size="5"
             />
            <field
                name="show_photo_image_height"
                type="text"
                label="COM_REMCA_SHOW_IMAGE_HEIGHT_LABEL"
                description="COM_REMCA_PHOTOS_SHOW_IMAGE_HEIGHT_DESC"
                class="validate-numeric"
                size="5"
             />
            <field
                name="spacer3"
                type="spacer"
                hr="true"
	        />
            <field
                name="show_photo_admin"
                type="radio"
                label="COM_REMCA_SHOW_ADMIN_LABEL"
                description="COM_REMCA_PHOTOS_SHOW_ADMIN_DESC"
                class="btn-group"
           >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="1">JSHOW</option>
                <option value="0">JHIDE</option>
            </field>
            <field
                name="show_photo_id_house"
                type="radio"
                label="COM_REMCA_PHOTOS_SHOW_FIELD_ID_HOUSE_LABEL"
                description="COM_REMCA_PHOTOS_SHOW_FIELD_ID_HOUSE_DESC"
                class="btn-group"
           >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option	value="1">JSHOW</option>
                <option	value="0">JHIDE</option>
            </field>
            <field
                name="show_photo_thumbnail_img"
                type="radio"
                label="COM_REMCA_PHOTOS_SHOW_FIELD_THUMBNAIL_IMG_LABEL"
                description="COM_REMCA_PHOTOS_SHOW_FIELD_THUMBNAIL_IMG_DESC"
                class="btn-group"
           >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option	value="1">JSHOW</option>
                <option	value="0">JHIDE</option>
            </field>
        </fieldset>
    </fields>
</metadata>
