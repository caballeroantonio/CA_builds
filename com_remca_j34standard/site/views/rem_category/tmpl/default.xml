<metadata>
	<layout
	    title="COM_REMCA_REM_CATEGORIES_VIEW_ITEM_DEFAULT_TITLE"
	    option="COM_REMCA_REM_CATEGORIES_VIEW_ITEM_DEFAULT_OPTION"
	>
        <message>
			<![CDATA[COM_REMCA_REM_CATEGORIES_VIEW_ITEM_DEFAULT_DESC]]>
		</message>
	</layout>
	<!-- Add fields to the request variables for the layout. -->
	<fields
	    name="request"
	>
		<fieldset
		    name="request"
			addfieldpath="/administrator/components/com_remca/models/fields"
		>
			<field
			    name="id"
			    type="modal_rem_categories"
				label="COM_REMCA_REM_CATEGORIES_SELECT_ITEM_LABEL"
				description="COM_REMCA_REM_CATEGORIES_SELECT_ITEM_DESC"
				required="true"
				edit="true"
				clear="false"				
			/>
		</fieldset>
	</fields>
    <!-- Add fields to the parameters object for the layout. -->
    <fields
	    name="params"
	>
        <!-- Basic options. -->
        <fieldset
            name="rem_category_basic_settings"
            label="COM_REMCA_REM_CATEGORIES_FIELDSET_LAYOUT"
        >
            <field
                name="show_rem_category_icons"
                type="radio"
                label="COM_REMCA_SHOW_ICONS_LABEL"
                description="COM_REMCA_SHOW_ICONS_DESC"
                class="btn-group"            
		    >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option	value="0">COM_REMCA_SHOW_ICONS_VALUE_TEXT</option>
                <option	value="1">COM_REMCA_SHOW_ICONS_VALUE_ICONS</option>
                <option	value="-1">JHIDE</option>
            </field>
            <field
                name="show_rem_category_print_icon"
                type="radio"
                label="COM_REMCA_SHOW_PRINT_ICON_LABEL"
                description="COM_REMCA_SHOW_PRINT_ICON_DESC"
                class="btn-group"            
		    >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="1">JSHOW</option>
                <option value="0">JHIDE</option>
            </field>
            <field
                name="show_rem_category_email_icon"
                type="radio"
                label="COM_REMCA_SHOW_EMAIL_ICON_LABEL"
                description="COM_REMCA_REM_CATEGORIES_SHOW_EMAIL_ICON_DESC"
                class="btn-group"            
		    >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="1">JSHOW</option>
                <option value="0">JHIDE</option>
            </field>
            <field
		        name="rem_category_info_block_position"
		        type="radio"
		        label="COM_REMCA_REM_CATEGORIES_INFOBLOCK_POSITION_LABEL"
		        description="COM_REMCA_REM_CATEGORIES_INFOBLOCK_POSITION_DESC"
                class="btn-group"            
	        >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="0">COM_REMCA_VALUE_ABOVE</option>
                <option value="1">COM_REMCA_VALUE_BELOW</option>
            </field>            
            <field
                name="keep_rem_category_itemid"
                type="radio"
                label="COM_REMCA_KEEP_ITEMID_LABEL"
                description="COM_REMCA_REM_CATEGORIES_KEEP_ITEMID_DESC"
                class="btn-group"            
		    >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option	value="1">JYES</option>
                <option	value="0">JNO</option>
            </field>
            <field
                name="show_rem_category_navigation"
                type="radio"
                label="COM_REMCA_SHOW_NAVIGATION_LABEL"
                description="COM_REMCA_REM_CATEGORIES_SHOW_NAVIGATION_DESC"
                class="btn-group"            
            >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="1">JSHOW</option>
                <option value="0">JHIDE</option>
            </field>
            <field
                name="spacer2"
                type="spacer"
                hr="true"
			/>
            <field
                name="show_rem_category_readmore"
                type="radio"
                label="COM_REMCA_SHOW_READMORE_LABEL"
                description="COM_REMCA_REM_CATEGORIES_SHOW_READMORE_DESC"
                class="btn-group"            
		    >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="1">JSHOW</option>
                <option value="0">JHIDE</option>
            </field>
            <field
                name="rem_category_readmore_limit"
                type="text"
                label="COM_REMCA_SHOW_READMORE_LIMIT_LABEL"
                description="COM_REMCA_REM_CATEGORIES_SHOW_READMORE_LIMIT_DESC"
                default="100"
	        />
        </fieldset>
        <fieldset
            name="rem_category_field_settings"
	        label="COM_REMCA_REM_CATEGORIES_FIELDSET_FIELDS"
	    >
            <field
                name="spacer3"
                type="spacer"
                hr="true"
	        />
            <field
                name="show_rem_category_admin"
                type="radio"
                label="COM_REMCA_SHOW_ADMIN_LABEL"
                description="COM_REMCA_REM_CATEGORIES_SHOW_ADMIN_DESC"
                class="btn-group"
           >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="1">JSHOW</option>
                <option value="0">JHIDE</option>
            </field>
            <field
                name="show_rem_category_iditem"
                type="radio"
                label="COM_REMCA_REM_CATEGORIES_SHOW_FIELD_IDITEM_LABEL"
                description="COM_REMCA_REM_CATEGORIES_SHOW_FIELD_IDITEM_DESC"
                class="btn-group"
           >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option	value="1">JSHOW</option>
                <option	value="0">JHIDE</option>
            </field>
            <field
                name="show_rem_category_idcat"
                type="radio"
                label="COM_REMCA_REM_CATEGORIES_SHOW_FIELD_IDCAT_LABEL"
                description="COM_REMCA_REM_CATEGORIES_SHOW_FIELD_IDCAT_DESC"
                class="btn-group"
           >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option	value="1">JSHOW</option>
                <option	value="0">JHIDE</option>
            </field>
        </fieldset>
    </fields>
</metadata>
