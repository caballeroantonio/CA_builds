<form
    addfieldpath="/components/com_remca/models/fields"
    addrulepath="/components/com_remca/models/rules"
>
    <fieldset>
        <field
			id="id"
			name="id"
			type="hidden"
			label="COM_REMCA_ID_LABEL"
			class="readonly"
			default="0"
			readonly="true"
		/>


        <field
		    id="description"
		    name="description"
			type="editor"
			label="JGLOBAL_DESCRIPTION"
			description="COM_REMCA_WA_ENTRY_CONVERSATIONS_FIELD_DESCRIPTION_DESC"
			class="inputbox"
            filter="JComponentHelper::filterText"
			buttons="true"
            hide="article"
		/>
        <field
			id="catid"
			name="catid"
			type="categoryedit"
			label="JCATEGORY"
			description="JFIELD_CATEGORY_DESC"
			extension="com_remca"
			class="inputbox"
			required="true"
            addfieldpath="/administrator/components/com_categories/models/fields"
		/>
        <field
			id="created"
			name="created"
			type="calendar"
			label="COM_REMCA_FIELD_CREATED_LABEL"
			description="COM_REMCA_WA_ENTRY_CONVERSATIONS_FIELD_CREATED_BY_DESC"
			class="inputbox"
			size="22"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"		
		/>
        <field
			id="created_by"
			name="created_by"
			type="user"
			label="COM_REMCA_FIELD_CREATED_BY_LABEL"
			description="COM_REMCA_WA_ENTRY_CONVERSATIONS_FIELD_CREATED_BY_DESC"
		/>
        <field
            id="state"
            name="state"
            type="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
			class="chzn-color-state"
            size="1"
            default="1"
	    >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASH</option>
        </field>
    </fieldset>
    <fieldset
        name="fieldset_wa_entry_conversations_fs"
        label="COM_REMCA_WA_ENTRY_CONVERSATIONS_FIELDSET_WA_ENTRY_CONVERSATIONS_FS_LABEL"
    >

        <field
            id="phone"
            name="phone"
            type="tel"
            label="COM_REMCA_WA_ENTRY_CONVERSATIONS_FIELD_PHONE_LABEL"
            description="COM_REMCA_WA_ENTRY_CONVERSATIONS_FIELD_PHONE_DESC"
            class="inputbox"
			size="25"
			maxlength="50"
			filter="tel"
			required="true"
        >
        </field>  
        <field
            id="id_wa_title_conversation"
            name="id_wa_title_conversation"
            type="modal_wa_title_conversations"
            label="COM_REMCA_WA_ENTRY_CONVERSATIONS_FIELD_ID_WA_TITLE_CONVERSATION_LABEL"
            description="COM_REMCA_WA_ENTRY_CONVERSATIONS_FIELD_ID_WA_TITLE_CONVERSATION_DESC"
            class="modal"
			required="true"
			default="0"
        >
        </field>  
        <field
            id="action"
            name="action"
            type="combo_suggest"
            label="COM_REMCA_WA_ENTRY_CONVERSATIONS_FIELD_ACTION_LABEL"
            description="COM_REMCA_WA_ENTRY_CONVERSATIONS_FIELD_ACTION_DESC"
        >
        </field>  
    </fieldset>
</form>
