<form
    addfieldpath="/components/com_remca/models/fields"
    addrulepath="/components/com_remca/models/rules"
>
    <fieldset>
        <field
			id="id"
			name="id"
			type="hidden"
			label="COM_REMCA_ID_LABEL"
			class="readonly"
			default="0"
			readonly="true"
		/>

        <field
			id="contenthistory"
			name="contenthistory"
			type="contenthistory"
			label="JTOOLBAR_VERSIONS"
			data-typeAlias="com_remca.main_category"
		/>
        <field
			id="name"
			name="name"
			type="text"
			label="COM_REMCA_MAIN_CATEGORIES_FIELD_NAME_LABEL"
			description="COM_REMCA_MAIN_CATEGORIES_FIELD_NAME_DESC"
			class="inputbox"
			size="50"
			required="true"
		/>
        <field
			id="alias"
			name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="COM_REMCA_FIELD_ALIAS_DESC"
    		class="inputbox"
			size="50"
			filter="unset"
		/>

        <field
		    id="description"
		    name="description"
			type="editor"
			label="JGLOBAL_DESCRIPTION"
			description="COM_REMCA_MAIN_CATEGORIES_FIELD_DESCRIPTION_DESC"
			class="inputbox"
            filter="JComponentHelper::filterText"
			buttons="true"
            hide="article,pagebreak"                
		/>
        <field
            id="state"
            name="state"
            type="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
			class="chzn-color-state"
            size="1"
            default="1"
	    >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASH</option>
        </field>
        <field
			id="access"
			name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			class="inputbox"
			size="1"
			default="1"
		/>
        <field
            id="language"
            name="language"
            type="contentlanguage"
            label="JFIELD_LANGUAGE_LABEL"
            description="JFIELD_LANGUAGE_DESC"
            class="inputbox"
 			default="*"
       >
            <option value="*">JALL</option>
        </field>
        <field
			id="version_note"
			name="version_note"
			type="text"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"
			class="inputbox"
			size="45"
		/>
    </fieldset>
    <fieldset
        name="fieldset_main_categories_fs"
        label="COM_REMCA_MAIN_CATEGORIES_FIELDSET_MAIN_CATEGORIES_FS_LABEL"
    >

        <field
            id="parent_id"
            name="parent_id"
            type="integer"
            label="COM_REMCA_MAIN_CATEGORIES_FIELD_PARENT_ID_LABEL"
            description="COM_REMCA_MAIN_CATEGORIES_FIELD_PARENT_ID_DESC"
            class="inputbox"
			size="1"
			default="0"
        >
        </field>  
        <field
            id="associate_category"
            name="associate_category"
            type="text"
            label="COM_REMCA_MAIN_CATEGORIES_FIELD_ASSOCIATE_CATEGORY_LABEL"
            description="COM_REMCA_MAIN_CATEGORIES_FIELD_ASSOCIATE_CATEGORY_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="title"
            name="title"
            type="text"
            label="COM_REMCA_MAIN_CATEGORIES_FIELD_TITLE_LABEL"
            description="COM_REMCA_MAIN_CATEGORIES_FIELD_TITLE_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="image"
            name="image"
            type="text"
            label="COM_REMCA_MAIN_CATEGORIES_FIELD_IMAGE_LABEL"
            description="COM_REMCA_MAIN_CATEGORIES_FIELD_IMAGE_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="section"
            name="section"
            type="text"
            label="COM_REMCA_MAIN_CATEGORIES_FIELD_SECTION_LABEL"
            description="COM_REMCA_MAIN_CATEGORIES_FIELD_SECTION_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="image_position"
            name="image_position"
            type="text"
            label="COM_REMCA_MAIN_CATEGORIES_FIELD_IMAGE_POSITION_LABEL"
            description="COM_REMCA_MAIN_CATEGORIES_FIELD_IMAGE_POSITION_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="editor"
            name="editor"
            type="text"
            label="COM_REMCA_MAIN_CATEGORIES_FIELD_EDITOR_LABEL"
            description="COM_REMCA_MAIN_CATEGORIES_FIELD_EDITOR_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="count"
            name="count"
            type="integer"
            label="COM_REMCA_MAIN_CATEGORIES_FIELD_COUNT_LABEL"
            description="COM_REMCA_MAIN_CATEGORIES_FIELD_COUNT_DESC"
            class="inputbox"
			size="1"
			default="0"
        >
        </field>  
        <field
            id="params2"
            name="params2"
            type="editor"
            label="COM_REMCA_MAIN_CATEGORIES_FIELD_PARAMS2_LABEL"
            description="COM_REMCA_MAIN_CATEGORIES_FIELD_PARAMS2_DESC"
            width="100%"
			height="250"
			cols="50"
			rows="5"
			buttons="*"
			hide_buttons="*"
			default=""
        >
        </field>  
    </fieldset>
</form>
