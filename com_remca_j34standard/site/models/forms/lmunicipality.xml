<form
    addfieldpath="/components/com_remca/models/fields"
    addrulepath="/components/com_remca/models/rules"
>
    <fieldset>
        <field
			id="id"
			name="id"
			type="hidden"
			label="COM_REMCA_ID_LABEL"
			class="readonly"
			default="0"
			readonly="true"
		/>

        <field
			id="name"
			name="name"
			type="text"
			label="COM_REMCA_LMUNICIPALITIES_FIELD_NAME_LABEL"
			description="COM_REMCA_LMUNICIPALITIES_FIELD_NAME_DESC"
			class="inputbox"
			size="50"
			required="true"
		/>

        <field
            id="state"
            name="state"
            type="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
			class="chzn-color-state"
            size="1"
            default="1"
	    >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASH</option>
        </field>
    </fieldset>
    <fieldset
        name="fieldset_municipality_fs"
        label="COM_REMCA_LMUNICIPALITIES_FIELDSET_MUNICIPALITY_FS_LABEL"
    >

        <field
            id="id_lstate"
            name="id_lstate"
            type="modal_lstates"
            label="COM_REMCA_LMUNICIPALITIES_FIELD_ID_LSTATE_LABEL"
            description="COM_REMCA_LMUNICIPALITIES_FIELD_ID_LSTATE_DESC"
            class="modal"
			link="1"
			default="0"
        >
        </field>  
        <field
            id="id_country"
            name="id_country"
            type="modal_countries"
            label="COM_REMCA_LMUNICIPALITIES_FIELD_ID_COUNTRY_LABEL"
            description="COM_REMCA_LMUNICIPALITIES_FIELD_ID_COUNTRY_DESC"
            class="modal"
			link="1"
			default="0"
        >
        </field>  
        <field
            id="id_va"
            name="id_va"
            type="integer"
            label="COM_REMCA_LMUNICIPALITIES_FIELD_ID_VA_LABEL"
            description="COM_REMCA_LMUNICIPALITIES_FIELD_ID_VA_DESC"
            class="inputbox"
			size="1"
			hidden="true"
			readonly="true"
			disabled="true"
			default="0"
        >
        </field>  
    </fieldset>
</form>
