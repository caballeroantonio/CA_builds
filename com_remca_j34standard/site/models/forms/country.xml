<form
    addfieldpath="/components/com_remca/models/fields"
    addrulepath="/components/com_remca/models/rules"
>
    <fieldset>
        <field
			id="id"
			name="id"
			type="hidden"
			label="COM_REMCA_ID_LABEL"
			class="readonly"
			default="0"
			readonly="true"
		/>

        <field
			id="name"
			name="name"
			type="text"
			label="COM_REMCA_COUNTRIES_FIELD_NAME_LABEL"
			description="COM_REMCA_COUNTRIES_FIELD_NAME_DESC"
			class="inputbox"
			size="50"
			required="true"
		/>

        <field
            id="state"
            name="state"
            type="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
			class="chzn-color-state"
            size="1"
            default="1"
	    >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASH</option>
        </field>
    </fieldset>
    <fieldset
        name="fieldset_country_fs"
        label="COM_REMCA_COUNTRIES_FIELDSET_COUNTRY_FS_LABEL"
    >

        <field
            id="ordering_cur"
            name="ordering_cur"
            type="integer"
            label="COM_REMCA_COUNTRIES_FIELD_ORDERING_CUR_LABEL"
            description="COM_REMCA_COUNTRIES_FIELD_ORDERING_CUR_DESC"
            class="inputbox"
			size="1"
			default="0"
        >
        </field>  
        <field
            id="published_cur"
            name="published_cur"
            type="integer"
            label="COM_REMCA_COUNTRIES_FIELD_PUBLISHED_CUR_LABEL"
            description="COM_REMCA_COUNTRIES_FIELD_PUBLISHED_CUR_DESC"
            class="inputbox"
			size="1"
			default="0"
        >
        </field>  
        <field
            id="iso2"
            name="iso2"
            type="text"
            label="COM_REMCA_COUNTRIES_FIELD_ISO2_LABEL"
            description="COM_REMCA_COUNTRIES_FIELD_ISO2_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="iso3"
            name="iso3"
            type="text"
            label="COM_REMCA_COUNTRIES_FIELD_ISO3_LABEL"
            description="COM_REMCA_COUNTRIES_FIELD_ISO3_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="currency"
            name="currency"
            type="text"
            label="COM_REMCA_COUNTRIES_FIELD_CURRENCY_LABEL"
            description="COM_REMCA_COUNTRIES_FIELD_CURRENCY_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="conversion"
            name="conversion"
            type="currency"
            label="COM_REMCA_COUNTRIES_FIELD_CONVERSION_LABEL"
            description="COM_REMCA_COUNTRIES_FIELD_CONVERSION_DESC"
            class="inputbox"
			size="1"
			default="0"
        >
        </field>  
        <field
            id="conversion_date"
            name="conversion_date"
            type="calendar"
            label="COM_REMCA_COUNTRIES_FIELD_CONVERSION_DATE_LABEL"
            description="COM_REMCA_COUNTRIES_FIELD_CONVERSION_DATE_DESC"
            class="inputbox"
			size="22"
			maxlength="25"
			format="%Y-%m-%d"
			filter="user_utc"
        >
        </field>  
    </fieldset>
</form>
