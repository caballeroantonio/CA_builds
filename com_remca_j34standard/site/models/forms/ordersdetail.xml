<form
    addfieldpath="/components/com_remca/models/fields"
    addrulepath="/components/com_remca/models/rules"
>
    <fieldset>
        <field
			id="id"
			name="id"
			type="hidden"
			label="COM_REMCA_ID_LABEL"
			class="readonly"
			default="0"
			readonly="true"
		/>

        <field
			id="contenthistory"
			name="contenthistory"
			type="contenthistory"
			label="JTOOLBAR_VERSIONS"
			data-typeAlias="com_remca.ordersdetail"
		/>
        <field
			id="name"
			name="name"
			type="text"
			label="COM_REMCA_ORDERS_DETAILS_FIELD_NAME_LABEL"
			description="COM_REMCA_ORDERS_DETAILS_FIELD_NAME_DESC"
			class="inputbox"
			size="50"
			required="true"
		/>

        <field
			id="version_note"
			name="version_note"
			type="text"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"
			class="inputbox"
			size="45"
		/>
    </fieldset>
    <fieldset
        name="fieldset_orders_details_fs"
        label="COM_REMCA_ORDERS_DETAILS_FIELDSET_ORDERS_DETAILS_FS_LABEL"
    >

        <field
            id="id_order"
            name="id_order"
            type="modal_orders"
            label="COM_REMCA_ORDERS_DETAILS_FIELD_ID_ORDER_LABEL"
            description="COM_REMCA_ORDERS_DETAILS_FIELD_ID_ORDER_DESC"
            class="modal"
			link="1"
			default="0"
			type_alias="com_remca.order" 
        >
        </field>  
        <field
            id="id_user"
            name="id_user"
            type="modal_jusers"
            label="COM_REMCA_ORDERS_DETAILS_FIELD_ID_USER_LABEL"
            description="COM_REMCA_ORDERS_DETAILS_FIELD_ID_USER_DESC"
            class="modal"
			default="0"
			type_alias="com_remca.user" 
        >
        </field>  
        <field
            id="fk_houses_htitle"
            name="fk_houses_htitle"
            type="text"
            label="COM_REMCA_ORDERS_DETAILS_FIELD_FK_HOUSES_HTITLE_LABEL"
            description="COM_REMCA_ORDERS_DETAILS_FIELD_FK_HOUSES_HTITLE_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="email"
            name="email"
            type="text"
            label="COM_REMCA_ORDERS_DETAILS_FIELD_EMAIL_LABEL"
            description="COM_REMCA_ORDERS_DETAILS_FIELD_EMAIL_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="status"
            name="status"
            type="text"
            label="COM_REMCA_ORDERS_DETAILS_FIELD_STATUS_LABEL"
            description="COM_REMCA_ORDERS_DETAILS_FIELD_STATUS_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="order_date"
            name="order_date"
            type="calendar"
            label="COM_REMCA_ORDERS_DETAILS_FIELD_ORDER_DATE_LABEL"
            description="COM_REMCA_ORDERS_DETAILS_FIELD_ORDER_DATE_DESC"
            class="inputbox validate-date"
			size="22"
			maxlength="25"
			format="%Y-%m-%d"
			filter="fixed"
			validate="date"
        >
        </field>  
        <field
            id="id_house"
            name="id_house"
            type="modal_houses"
            label="COM_REMCA_ORDERS_DETAILS_FIELD_ID_HOUSE_LABEL"
            description="COM_REMCA_ORDERS_DETAILS_FIELD_ID_HOUSE_DESC"
            class="modal"
			link="1"
			default="0"
			type_alias="com_remca.house" 
        >
        </field>  
        <field
            id="txn_type"
            name="txn_type"
            type="text"
            label="COM_REMCA_ORDERS_DETAILS_FIELD_TXN_TYPE_LABEL"
            description="COM_REMCA_ORDERS_DETAILS_FIELD_TXN_TYPE_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="txn_id"
            name="txn_id"
            type="text"
            label="COM_REMCA_ORDERS_DETAILS_FIELD_TXN_ID_LABEL"
            description="COM_REMCA_ORDERS_DETAILS_FIELD_TXN_ID_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="payer_id"
            name="payer_id"
            type="text"
            label="COM_REMCA_ORDERS_DETAILS_FIELD_PAYER_ID_LABEL"
            description="COM_REMCA_ORDERS_DETAILS_FIELD_PAYER_ID_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="payer_status"
            name="payer_status"
            type="text"
            label="COM_REMCA_ORDERS_DETAILS_FIELD_PAYER_STATUS_LABEL"
            description="COM_REMCA_ORDERS_DETAILS_FIELD_PAYER_STATUS_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="order_calculated_price"
            name="order_calculated_price"
            type="text"
            label="COM_REMCA_ORDERS_DETAILS_FIELD_ORDER_CALCULATED_PRICE_LABEL"
            description="COM_REMCA_ORDERS_DETAILS_FIELD_ORDER_CALCULATED_PRICE_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="order_price"
            name="order_price"
            type="integer"
            label="COM_REMCA_ORDERS_DETAILS_FIELD_ORDER_PRICE_LABEL"
            description="COM_REMCA_ORDERS_DETAILS_FIELD_ORDER_PRICE_DESC"
            class="inputbox"
			size="1"
			default="0"
        >
        </field>  
        <field
            id="order_currency_code"
            name="order_currency_code"
            type="text"
            label="COM_REMCA_ORDERS_DETAILS_FIELD_ORDER_CURRENCY_CODE_LABEL"
            description="COM_REMCA_ORDERS_DETAILS_FIELD_ORDER_CURRENCY_CODE_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="payment_details"
            name="payment_details"
            type="editor"
            label="COM_REMCA_ORDERS_DETAILS_FIELD_PAYMENT_DETAILS_LABEL"
            description="COM_REMCA_ORDERS_DETAILS_FIELD_PAYMENT_DETAILS_DESC"
            width="100%"
			height="250"
			cols="50"
			rows="5"
			buttons="*"
			hide_buttons="*"
			default=""
        >
        </field>  
        <field
            id="paypal_paykay"
            name="paypal_paykay"
            type="text"
            label="COM_REMCA_ORDERS_DETAILS_FIELD_PAYPAL_PAYKAY_LABEL"
            description="COM_REMCA_ORDERS_DETAILS_FIELD_PAYPAL_PAYKAY_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
    </fieldset>
</form>
