<form
    addfieldpath="/components/com_remca/models/fields"
    addrulepath="/components/com_remca/models/rules"
>
    <fieldset>
        <field
			id="id"
			name="id"
			type="hidden"
			label="COM_REMCA_ID_LABEL"
			class="readonly"
			default="0"
			readonly="true"
		/>

        <field
			id="contenthistory"
			name="contenthistory"
			type="contenthistory"
			label="JTOOLBAR_VERSIONS"
			data-typeAlias="com_remca.buyingrequest"
		/>

        <field
			id="version_note"
			name="version_note"
			type="text"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"
			class="inputbox"
			size="45"
		/>
    </fieldset>
    <fieldset
        name="fieldset_buying_request_fs"
        label="COM_REMCA_BUYING_REQUESTS_FIELDSET_BUYING_REQUEST_FS_LABEL"
    >

        <field
            id="id_house"
            name="id_house"
            type="modal_houses"
            label="COM_REMCA_BUYING_REQUESTS_FIELD_ID_HOUSE_LABEL"
            description="COM_REMCA_BUYING_REQUESTS_FIELD_ID_HOUSE_DESC"
            class="modal"
			link="1"
			default="0"
			type_alias="com_remca.house" 
        >
        </field>  
        <field
            id="id_user"
            name="id_user"
            type="modal_jusers"
            label="COM_REMCA_BUYING_REQUESTS_FIELD_ID_USER_LABEL"
            description="COM_REMCA_BUYING_REQUESTS_FIELD_ID_USER_DESC"
            class="modal"
			default="0"
			type_alias="com_remca.user" 
        >
        </field>  
        <field
            id="buying_request"
            name="buying_request"
            type="calendar"
            label="COM_REMCA_BUYING_REQUESTS_FIELD_BUYING_REQUEST_LABEL"
            description="COM_REMCA_BUYING_REQUESTS_FIELD_BUYING_REQUEST_DESC"
            class="inputbox validate-date"
			size="22"
			maxlength="25"
			format="%Y-%m-%d"
			filter="fixed"
			validate="date"
        >
        </field>  
        <field
            id="customer_name"
            name="customer_name"
            type="text"
            label="COM_REMCA_BUYING_REQUESTS_FIELD_CUSTOMER_NAME_LABEL"
            description="COM_REMCA_BUYING_REQUESTS_FIELD_CUSTOMER_NAME_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="customer_email"
            name="customer_email"
            type="text"
            label="COM_REMCA_BUYING_REQUESTS_FIELD_CUSTOMER_EMAIL_LABEL"
            description="COM_REMCA_BUYING_REQUESTS_FIELD_CUSTOMER_EMAIL_DESC"
            class="inputbox validate-email"
			size="50"
			maxlength="255"
			validate="email"
        >
        </field>  
        <field
            id="customer_phone"
            name="customer_phone"
            type="text"
            label="COM_REMCA_BUYING_REQUESTS_FIELD_CUSTOMER_PHONE_LABEL"
            description="COM_REMCA_BUYING_REQUESTS_FIELD_CUSTOMER_PHONE_DESC"
            class="inputbox validate-tel"
			size="50"
			maxlength="255"
			validate="tel"
        >
        </field>  
        <field
            id="customer_comment"
            name="customer_comment"
            type="editor"
            label="COM_REMCA_BUYING_REQUESTS_FIELD_CUSTOMER_COMMENT_LABEL"
            description="COM_REMCA_BUYING_REQUESTS_FIELD_CUSTOMER_COMMENT_DESC"
            width="100%"
			height="250"
			cols="50"
			rows="5"
			buttons="*"
			hide_buttons="*"
			default=""
        >
        </field>  
        <field
            id="status"
            name="status"
            type="integer"
            label="COM_REMCA_BUYING_REQUESTS_FIELD_STATUS_LABEL"
            description="COM_REMCA_BUYING_REQUESTS_FIELD_STATUS_DESC"
            class="inputbox"
			size="1"
			default="0"
        >
        </field>  
    </fieldset>
</form>
