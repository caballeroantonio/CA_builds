<form
    addfieldpath="/components/com_remca/models/fields"
    addrulepath="/components/com_remca/models/rules"
>
    <fieldset>
        <field
			id="id"
			name="id"
			type="hidden"
			label="COM_REMCA_ID_LABEL"
			class="readonly"
			default="0"
			readonly="true"
		/>

        <field
			id="contenthistory"
			name="contenthistory"
			type="contenthistory"
			label="JTOOLBAR_VERSIONS"
			data-typeAlias="com_remca.wishlist"
		/>

        <field
			id="created"
			name="created"
			type="calendar"
			label="COM_REMCA_FIELD_CREATED_LABEL"
			description="COM_REMCA_WISHESLIST_FIELD_CREATED_BY_DESC"
			class="inputbox"
			size="22"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"		
		/>
        <field
			id="created_by"
			name="created_by"
			type="user"
			label="COM_REMCA_FIELD_CREATED_BY_LABEL"
			description="COM_REMCA_WISHESLIST_FIELD_CREATED_BY_DESC"
		/>
        <field
            id="modified"
            name="modified"
            type="calendar"
			label="COM_REMCA_FIELD_MODIFIED_LABEL"
			description="COM_REMCA_WISHESLIST_FIELD_MODIFIED_DESC"
            class="readonly"
			size="22"
			readonly="true"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
		/>
        <field
            id="modified_by"
            name="modified_by"
            type="user"
		    label="COM_REMCA_FIELD_MODIFIED_BY_LABEL"
		    class="readonly"
		    readonly="true"
		    filter="unset"
		/>
        <field
            id="state"
            name="state"
            type="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
			class="chzn-color-state"
            size="1"
            default="1"
	    >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASH</option>
        </field>
        <field
			id="version_note"
			name="version_note"
			type="text"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"
			class="inputbox"
			size="45"
		/>
    </fieldset>
    <fieldset
        name="fieldset_users_wishlist_fs"
        label="COM_REMCA_WISHESLIST_FIELDSET_USERS_WISHLIST_FS_LABEL"
    >

        <field
            id="id_house"
            name="id_house"
            type="modal_houses"
            label="COM_REMCA_WISHESLIST_FIELD_ID_HOUSE_LABEL"
            description="COM_REMCA_WISHESLIST_FIELD_ID_HOUSE_DESC"
            class="modal"
			default="0"
			type_alias="com_remca.house" 
        >
        </field>  
    </fieldset>
</form>
