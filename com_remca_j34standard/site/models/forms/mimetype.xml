<form
    addfieldpath="/components/com_remca/models/fields"
    addrulepath="/components/com_remca/models/rules"
>
    <fieldset>
        <field
			id="id"
			name="id"
			type="hidden"
			label="COM_REMCA_ID_LABEL"
			class="readonly"
			default="0"
			readonly="true"
		/>

        <field
			id="contenthistory"
			name="contenthistory"
			type="contenthistory"
			label="JTOOLBAR_VERSIONS"
			data-typeAlias="com_remca.mimetype"
		/>

        <field
			id="version_note"
			name="version_note"
			type="text"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"
			class="inputbox"
			size="45"
		/>
    </fieldset>
    <fieldset
        name="fieldset_jos_rem_mime_types_fs"
        label="COM_REMCA_MIME_TYPES_FIELDSET_JOS_REM_MIME_TYPES_FS_LABEL"
    >

        <field
            id="mime_ext"
            name="mime_ext"
            type="editor"
            label="COM_REMCA_MIME_TYPES_FIELD_MIME_EXT_LABEL"
            description="COM_REMCA_MIME_TYPES_FIELD_MIME_EXT_DESC"
            width="100%"
			height="250"
			cols="50"
			rows="5"
			buttons="*"
			hide_buttons="*"
			default=""
        >
        </field>  
        <field
            id="mime_type"
            name="mime_type"
            type="editor"
            label="COM_REMCA_MIME_TYPES_FIELD_MIME_TYPE_LABEL"
            description="COM_REMCA_MIME_TYPES_FIELD_MIME_TYPE_DESC"
            width="100%"
			height="250"
			cols="50"
			rows="5"
			buttons="*"
			hide_buttons="*"
			default=""
        >
        </field>  
    </fieldset>
</form>
