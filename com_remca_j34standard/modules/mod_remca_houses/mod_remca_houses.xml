<extension type="module" version="3.4" client="site" method="upgrade">
	<name>mod_remca_houses</name>
    <author>caballeroantonio</author>
    <creationDate>June 2018</creationDate>
    <copyright>
    </copyright>
    <license>
        GNU General Public License version 3 or later; See http://www.gnu.org/copyleft/gpl.html
    </license>
    <authorEmail>caballeroantonio@hotmail.com</authorEmail>
    <authorUrl>caballeroantonio.com</authorUrl>
    <version>1.0.0</version>
	<description>MOD_REMCA_HOUSES_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_remca_houses">mod_remca_houses.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>mod_remca_houses.xml</filename>
	</files>
	<languages>
        <language tag="en-GB">language/en-GB/en-GB.mod_remca_houses.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.mod_remca_houses.sys.ini</language>
	</languages>
    <config>
        <fields name="params">
			<fieldset 
			    name="houses"
			    label="MOD_REMCA_HOUSES_PARAMETERS"
			>
                <field
                    name="house_layout"
                    type="componentlayout"
                    label="JGLOBAL_FIELD_LAYOUT_LABEL"
                    description="MOD_REMCA_HOUSES_CHOOSE_LAYOUT_DESC"
                    menuitems="true"
                    extension="com_remca"
                    view="house"
                    default="_:default"
		        />
                <field
					name="count"
					type="text"
					default="5"
					label="MOD_REMCA_HOUSES_FIELD_COUNT_LABEL"
					description="MOD_REMCA_HOUSES_FIELD_COUNT_DESC"
				/>
                <field
					name="catid"
					type="categoryedit"
					extension="com_remca"
					multiple="true"
					size="10"
					default=""
					label="JCATEGORY"
					description="MOD_REMCA_HOUSES_FIELD_CATEGORY_DESC"
                    addfieldpath="/administrator/components/com_categories/models/fields"
				>
                    <option value="">JOPTION_ALL_CATEGORIES</option>
                </field>

                <field
					name="show_featured"
					type="radio"
					label="MOD_REMCA_HOUSES_FIELD_FEATURED_LABEL"
					description="MOD_REMCA_HOUSES_FIELD_FEATURED_DESC"
                    class="btn-group"			
					default=""
				>
                    <option
						value="">JSHOW</option>
                    <option
						value="0">JHIDE</option>
                    <option
						value="1">MOD_REMCA_HOUSES_VALUE_ONLY_SHOW_FEATURED</option>
                </field>

                <field
					name="ordering"
					type="list"
					label="MOD_REMCA_HOUSES_FIELD_ORDERING_LABEL"
					description="MOD_REMCA_HOUSES_FIELD_ORDERING_DESC"
			        class="chzn-color"
				>
                    <option value="m_dsc">MOD_REMCA_HOUSES_VALUE_RECENT_MODIFIED</option>
                    <option value="h_dsc">MOD_REMCA_HOUSES_VALUE_MOST_HITS</option>
                    <option value="n_asc">MOD_REMCA_HOUSES_VALUE_NAME_ALPHA</option>
                    <option value="n_dsc">MOD_REMCA_HOUSES_VALUE_NAME_RALPHA</option>
                    <option value="o_asc">MOD_REMCA_HOUSES_VALUE_ORDERING</option>
                </field>

                <field
					name="list-style"
					type="list"
					label="MOD_REMCA_HOUSES_FIELD_STYLE_LABEL"
					description="MOD_REMCA_HOUSES_FIELD_STYLE_DESC"
			        class="chzn-color"
					default=""
				>
                    <option value="">MOD_REMCA_HOUSES_VALUE_PLAIN</option>
                    <option value="ul">MOD_REMCA_HOUSES_VALUE_BULLETS</option>
                    <option value="ol">MOD_REMCA_HOUSES_VALUE_NUMBERED</option>
                </field>
                <field
					name="itemid"
					type="menuitem"
					label="MOD_REMCA_HOUSES_FIELD_ITEMID_LABEL"
					description="MOD_REMCA_HOUSES_FIELD_ITEMID_DESC" >
                    <option	value="">JDEFAULT</option>
                </field>                
            </fieldset>

			<fieldset
				name="advanced"
			>
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC"
				/>
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
				/>

				<field
					name="cache"
					type="radio"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
                    class="btn-group"
					default="1"
				>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC"
				/>
				<field
					name="cachemode"
					type="hidden"
					default="static"
				>
					<option value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
