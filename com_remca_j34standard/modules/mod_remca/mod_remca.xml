<extension type="module" version="3.4" client="site" method="upgrade">
    <name>mod_remca</name>
    <author>caballeroantonio</author>
    <creationDate>October 2018</creationDate>
    <copyright>
    </copyright>
    <license>
        GNU General Public License version 3 or later; See http://www.gnu.org/copyleft/gpl.html
    </license>
    <authorEmail>caballeroantonio@hotmail.com</authorEmail>
    <authorUrl>caballeroantonio.com</authorUrl>
    <version>1.0.0</version>
    <description>MOD_REMCA_XML_DESCRIPTION</description>
    <files>
        <filename module="mod_remca">mod_remca.php</filename>
        <folder>tmpl</folder>
        <filename>helper.php</filename>
        <filename>mod_remca.xml</filename>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.mod_remca.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.mod_remca.sys.ini</language>
    </languages>
     <config>
        <fields name="params">
            <fieldset
			    name="remca"
			    label="MOD_REMCA_PARAMETERS"
			>
                <field
                    name="componentobject"
                    type="list"
                    label="MOD_REMCA_FIELD_SELECT_COMPONENTOBJECT_LABEL"
                    description="MOD_REMCA_FIELD_SELECT_COMPONENTOBJECT_DESC"
			        class="chzn-color"
                    required="true"
		        >
                    <option value="House:Houses">Inmueble</option>
                    <option value="Wa_entry_conversation:Wa_entry_conversations">Entrada De La Conversaci√≥n Whatsapp</option>
                </field>
                <field
					name="user_id"
					type="radio"
					label="MOD_REMCA_FIELD_USER_LABEL"
					description="MOD_REMCA_FIELD_USER_DESC"
                    class="btn-group"
					default="0"
				>
                    <option value="0">MOD_REMCA_VALUE_ANYONE</option>
                    <option value="by_me">MOD_REMCA_VALUE_ADDED_BY_ME</option>
                    <option value="not_me">MOD_REMCA_VALUE_NOTADDED_BY_ME</option>
                </field>
                <field
					name="ordering"
					type="list"
					label="MOD_REMCA_FIELD_ORDERING_LABEL"
					description="MOD_REMCA_FIELD_ORDERING_DESC"
			        class="chzn-color"
				>

                    <option value="houses m_dsc">MOD_REMCA_HOUSES_VALUE_RECENT_MODIFIED</option>
                    <option value="houses h_dsc">MOD_REMCA_HOUSES_VALUE_MOST_HITS</option>
                    <option value="houses n_asc">MOD_REMCA_HOUSES_VALUE_NAME_ALPHA</option>
                    <option value="houses n_dsc">MOD_REMCA_HOUSES_VALUE_NAME_RALPHA</option>
                    <option value="houses o_asc">MOD_REMCA_HOUSES_VALUE_ORDERING</option>
                    <option value="wa_entry_conversations c_dsc">MOD_REMCA_WA_ENTRY_CONVERSATIONS_VALUE_RECENT_ADDED</option>
                    <option value="wa_entry_conversations o_asc">MOD_REMCA_WA_ENTRY_CONVERSATIONS_VALUE_ORDERING</option>
                </field>
                <field
					name="count"
					type="text"
					default="5"
					label="MOD_REMCA_FIELD_COUNT_LABEL"
					description="MOD_REMCA_FIELD_COUNT_DESC"
				/>
                <field
					name="list-style"
					type="list"
					label="MOD_REMCA_FIELD_STYLE_LABEL"
					description="MOD_REMCA_FIELD_STYLE_DESC"					
			        class="chzn-color"
					default=""
				>
                    <option value="">MOD_REMCA_VALUE_PLAIN</option>
                    <option value="ul">MOD_REMCA_VALUE_BULLETS</option>
                    <option value="ol">MOD_REMCA_VALUE_NUMBERED</option>
                </field>
                <field
					name="itemid"
					type="menuitem"
					disable="separator"
					label="MOD_REMCA_FIELD_ITEMID_LABEL"
					description="MOD_REMCA_FIELD_ITEMID_DESC" >
                    <option
						value="">JDEFAULT</option>
                </field>
            </fieldset>

            <fieldset
				name="advanced"
			>
                <field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC"
				/>
                <field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
				/>

                <field
					name="cache"
					type="radio"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
                    class="btn-group"
					default="1"
				>
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>

                <field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC"
				/>
                <field
					name="cachemode"
					type="hidden"
					default="static"
				>
                    <option value="static"></option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>