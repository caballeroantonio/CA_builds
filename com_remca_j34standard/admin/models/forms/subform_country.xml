<form
    addfieldpath="/administrator/components/com_remca/models/fields"
    addrulepath="/administrator/components/com_remca/models/rules"

>
    <fieldset name="basic_details"
    >
        <field name="name"
		    type="text"
			label="COM_REMCA_FIELD_NAME_LABEL"
			description="COM_REMCA_COUNTRIES_FIELD_NAME_DESC"
			size="50"
			required="true"
		/>
        <field name="buttonspacer"
            type="spacer"
            label="JGLOBAL_ACTION_PERMISSIONS_LABEL"
            description="JGLOBAL_ACTION_PERMISSIONS_DESCRIPTION"
        />
    </fieldset>
    <fieldset name="fieldset_country_fs"
        label="COM_REMCA_COUNTRIES_FIELDSET_COUNTRY_FS_LABEL"
        description="COM_REMCA_COUNTRIES_FIELDSET_COUNTRY_FS_DESC"
    >
        <field name="ordering_cur"
            type="integer"
            label="COM_REMCA_COUNTRIES_FIELD_ORDERING_CUR_LABEL"
            description="COM_REMCA_COUNTRIES_FIELD_ORDERING_CUR_DESC"
            class="inputbox"
			size="1"
			default="0"
        >
        </field>  
        <field name="published_cur"
            type="integer"
            label="COM_REMCA_COUNTRIES_FIELD_PUBLISHED_CUR_LABEL"
            description="COM_REMCA_COUNTRIES_FIELD_PUBLISHED_CUR_DESC"
            class="inputbox"
			size="1"
			default="0"
        >
        </field>  
        <field name="iso2"
            type="text"
            label="COM_REMCA_COUNTRIES_FIELD_ISO2_LABEL"
            description="COM_REMCA_COUNTRIES_FIELD_ISO2_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field name="iso3"
            type="text"
            label="COM_REMCA_COUNTRIES_FIELD_ISO3_LABEL"
            description="COM_REMCA_COUNTRIES_FIELD_ISO3_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field name="currency"
            type="text"
            label="COM_REMCA_COUNTRIES_FIELD_CURRENCY_LABEL"
            description="COM_REMCA_COUNTRIES_FIELD_CURRENCY_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field name="conversion"
            type="currency"
            label="COM_REMCA_COUNTRIES_FIELD_CONVERSION_LABEL"
            description="COM_REMCA_COUNTRIES_FIELD_CONVERSION_DESC"
            class="inputbox"
			size="1"
			default="0"
        >
        </field>  
        <field name="conversion_date"
            type="calendar"
            label="COM_REMCA_COUNTRIES_FIELD_CONVERSION_DATE_LABEL"
            description="COM_REMCA_COUNTRIES_FIELD_CONVERSION_DATE_DESC"
            class="inputbox"
			size="22"
			maxlength="25"
			format="%Y-%m-%d"
			filter="user_utc"
        >
        </field>  
    </fieldset>
    <fieldset name="publishing"
		label="COM_REMCA_FIELDSET_PUBLISHING_LABEL"
    >

    </fieldset>
</form>
