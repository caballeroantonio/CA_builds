<form
    addfieldpath="/administrator/components/com_remca/models/fields"
    addrulepath="/administrator/components/com_remca/models/rules"

>
    <fieldset name="basic_details"
    >
        <field name="id"
		    type="text"
            label="JGLOBAL_FIELD_ID_LABEL"
            description ="JGLOBAL_FIELD_ID_DESC"
			readonly="true"
			class="readonly"
            default="0"
		/>
        <field name="version_note"
            type="text"
            label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"
			class="span12"
			size="45"
		/>
        <field name="buttonspacer"
            type="spacer"
            label="JGLOBAL_ACTION_PERMISSIONS_LABEL"
            description="JGLOBAL_ACTION_PERMISSIONS_DESCRIPTION"
        />

        <field name="ordering"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"
			type="remcaordering"
			table="#__rem_photos"
		/>
    </fieldset>
    <fields name="images"
        label="COM_REMCA_PHOTOS_IMAGE_OPTIONS"
    >
        <field name="image_url"
            type="media"
            label="COM_REMCA_FIELD_IMAGE_LABEL"
            description="COM_REMCA_PHOTOS_FIELD_IMAGE_DESC"
        />
        <field name="image_alt_text"
            type="text"
            label="COM_REMCA_FIELD_IMAGE_ALTTEXT_LABEL"
            description="COM_REMCA_PHOTOS_FIELD_IMAGE_ALTTEXT_DESC"
            size="20"
        />
        <field name="image_caption"
            type="text"
            label="COM_REMCA_FIELD_IMAGE_CAPTION_LABEL"
            description="COM_REMCA_PHOTOS_FIELD_IMAGE_CAPTION_DESC"
            size="20"
        />
    </fields>
    <fieldset name="fieldset_photos_fs"
        label="COM_REMCA_PHOTOS_FIELDSET_PHOTOS_FS_LABEL"
        description="COM_REMCA_PHOTOS_FIELDSET_PHOTOS_FS_DESC"
    >
        <field name="id_house"
            type="modal_houses"
            label="COM_REMCA_PHOTOS_FIELD_ID_HOUSE_LABEL"
            description="COM_REMCA_PHOTOS_FIELD_ID_HOUSE_DESC"
            class="modal"
			default="'0'"
        >
        </field>  
        <field name="thumbnail_img"
            type="text"
            label="COM_REMCA_PHOTOS_FIELD_THUMBNAIL_IMG_LABEL"
            description="COM_REMCA_PHOTOS_FIELD_THUMBNAIL_IMG_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
    </fieldset>
    <fieldset name="publishing"
		label="COM_REMCA_FIELDSET_PUBLISHING_LABEL"
    >
        <field name="version"
            type="text"
			label="COM_REMCA_FIELD_VERSION_LABEL"
            description="COM_REMCA_PHOTOS_FIELD_VERSION_DESC"
			class="readonly"
			size="6"
			readonly="true"
			filter="unset"
		/>
    </fieldset>
</form>
