            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field name="count"
            type="integer"
            label="COM_REMCA_MAIN_CATEGORIES_FIELD_COUNT_LABEL"
            description="COM_REMCA_MAIN_CATEGORIES_FIELD_COUNT_DESC"
            class="inputbox"
			size="1"
			default="0"
        >
        </field>  
        <field name="params2"
            type="editor"
            label="COM_REMCA_MAIN_CATEGORIES_FIELD_PARAMS2_LABEL"
            description="COM_REMCA_MAIN_CATEGORIES_FIELD_PARAMS2_DESC"
            width="100%"
			height="250"
			cols="50"
			rows="5"
			buttons="*"
			hide_buttons="*"
			default=""
        >
        </field>  
    </fieldset>
    <fieldset name="publishing"
		label="COM_REMCA_FIELDSET_PUBLISHING_LABEL"
    >
        <field name="version"
            type="text"
			label="COM_REMCA_FIELD_VERSION_LABEL"
            description="COM_REMCA_MAIN_CATEGORIES_FIELD_VERSION_DESC"
			class="readonly"
			size="6"
			readonly="true"
			filter="unset"
		/>
        <field name="checked_out"
			type="hidden"
			filter="unset"
		/>
        <field name="checked_out_time"
			type="hidden"
			filter="unset"
		 />
    </fieldset>
