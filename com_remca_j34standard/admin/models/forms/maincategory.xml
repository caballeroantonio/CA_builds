<form
    addfieldpath="/administrator/components/com_remca/models/fields"
    addrulepath="/administrator/components/com_remca/models/rules"

>
    <fieldset name="basic_details"
    >
        <field name="id"
		    type="text"
            label="JGLOBAL_FIELD_ID_LABEL"
            description ="JGLOBAL_FIELD_ID_DESC"
			readonly="true"
			class="readonly"
            default="0"
		/>
        <field name="name"
		    type="text"
			label="COM_REMCA_FIELD_NAME_LABEL"
			description="COM_REMCA_MAIN_CATEGORIES_FIELD_NAME_DESC"
			size="50"
			required="true"
		/>
        <field name="alias"
		    type="text"
			label="JFIELD_ALIAS_LABEL"
			description="COM_REMCA_FIELD_ALIAS_DESC"
			size="50"
         />
        <field name="version_note"
            type="text"
            label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"
			class="span12"
			size="45"
		/>
        <field name="state"
    		type="list"
			label="JSTATUS"
			description="COM_REMCA_MAIN_CATEGORIES_FIELD_STATUS_DESC"
			class="chzn-color-state"
			size="1"
			default="1"
		>
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASH</option>
        </field>
        <field name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			size="1"
			default="1"
		/>
        <field name="buttonspacer"
            type="spacer"
            label="JGLOBAL_ACTION_PERMISSIONS_LABEL"
            description="JGLOBAL_ACTION_PERMISSIONS_DESCRIPTION"
        />

        <field name="ordering"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"
			type="remcaordering"
			table="#__rem_main_categories"
		/>
        <field
		    name="description"
            type="editor"
			label="JGLOBAL_DESCRIPTION"
            description="COM_REMCA_MAIN_CATEGORIES_FIELD_DESCRIPTION_DESC"
            filter="JComponentHelper::filterText"
            buttons="true"
            hide="article,pagebreak"                
        />
        <field name="language"
            type="contentlanguage"
            label="JFIELD_LANGUAGE_LABEL"
		    description="COM_REMCA_MAIN_CATEGORIES_FIELD_LANGUAGE_DESC"
			default="*"
		>
            <option value="*">JALL</option>
        </field>
    </fieldset>
