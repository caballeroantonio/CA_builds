<form
    addfieldpath="/administrator/components/com_remca/models/fields"
    addrulepath="/administrator/components/com_remca/models/rules"

>
    <fieldset
        name="basic_details"
    >
        <field
		    name="id"
		    type="text"
            label="JGLOBAL_FIELD_ID_LABEL"
            description ="JGLOBAL_FIELD_ID_DESC"
			readonly="true"
			class="readonly"
            default="0"
		/>
        <field
            name="version_note"
            type="text"
            label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"
			class="span12"
			size="45"
		/>
        <field
            name="buttonspacer"
            type="spacer"
            label="JGLOBAL_ACTION_PERMISSIONS_LABEL"
            description="JGLOBAL_ACTION_PERMISSIONS_DESCRIPTION"
        />

    </fieldset>
    <fieldset
        name="fieldset_jos_rem_rent_sal_fs"
        label="COM_REMCA_RENT_SAL_FIELDSET_JOS_REM_RENT_SAL_FS_LABEL"
        description="COM_REMCA_RENT_SAL_FIELDSET_JOS_REM_RENT_SAL_FS_DESC"
    >
        <field
            name="fk_houseid"
            type="modal_houses"
            label="COM_REMCA_RENT_SAL_FIELD_FK_HOUSEID_LABEL"
            description="COM_REMCA_RENT_SAL_FIELD_FK_HOUSEID_DESC"
            class="modal"
			default="0"
        >
        </field>  
        <field
            name="monthW"
            type="integer"
            label="COM_REMCA_RENT_SAL_FIELD_MONTHW_LABEL"
            description="COM_REMCA_RENT_SAL_FIELD_MONTHW_DESC"
            class="inputbox"
			size="1"
			default="0"
        >
        </field>  
        <field
            name="yearW"
            type="integer"
            label="COM_REMCA_RENT_SAL_FIELD_YEARW_LABEL"
            description="COM_REMCA_RENT_SAL_FIELD_YEARW_DESC"
            class="inputbox"
			size="1"
			default="0"
        >
        </field>  
        <field
            name="week"
            type="text"
            label="COM_REMCA_RENT_SAL_FIELD_WEEK_LABEL"
            description="COM_REMCA_RENT_SAL_FIELD_WEEK_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            name="weekend"
            type="text"
            label="COM_REMCA_RENT_SAL_FIELD_WEEKEND_LABEL"
            description="COM_REMCA_RENT_SAL_FIELD_WEEKEND_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            name="midweek"
            type="text"
            label="COM_REMCA_RENT_SAL_FIELD_MIDWEEK_LABEL"
            description="COM_REMCA_RENT_SAL_FIELD_MIDWEEK_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            name="price_from"
            type="calendar"
            label="COM_REMCA_RENT_SAL_FIELD_PRICE_FROM_LABEL"
            description="COM_REMCA_RENT_SAL_FIELD_PRICE_FROM_DESC"
            class="inputbox validate-date"
			size="22"
			maxlength="25"
			format="%Y-%m-%d"
			filter="fixed"
			validate="date"
        >
        </field>  
        <field
            name="price_to"
            type="calendar"
            label="COM_REMCA_RENT_SAL_FIELD_PRICE_TO_LABEL"
            description="COM_REMCA_RENT_SAL_FIELD_PRICE_TO_DESC"
            class="inputbox validate-date"
			size="22"
			maxlength="25"
			format="%Y-%m-%d"
			filter="fixed"
			validate="date"
        >
        </field>  
        <field
            name="special_price"
            type="currency"
            label="COM_REMCA_RENT_SAL_FIELD_SPECIAL_PRICE_LABEL"
            description="COM_REMCA_RENT_SAL_FIELD_SPECIAL_PRICE_DESC"
            class="inputbox"
			size="1"
			default="0"
        >
        </field>  
        <field
            name="comment_price"
            type="text"
            label="COM_REMCA_RENT_SAL_FIELD_COMMENT_PRICE_LABEL"
            description="COM_REMCA_RENT_SAL_FIELD_COMMENT_PRICE_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            name="priceunit"
            type="text"
            label="COM_REMCA_RENT_SAL_FIELD_PRICEUNIT_LABEL"
            description="COM_REMCA_RENT_SAL_FIELD_PRICEUNIT_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
    </fieldset>
    <fieldset
        name="publishing"
		label="COM_REMCA_FIELDSET_PUBLISHING_LABEL"
    >
        <field
            name="version"
            type="text"
			label="COM_REMCA_FIELD_VERSION_LABEL"
            description="COM_REMCA_RENT_SAL_FIELD_VERSION_DESC"
			class="readonly"
			size="6"
			readonly="true"
			filter="unset"
		/>
    </fieldset>
</form>
