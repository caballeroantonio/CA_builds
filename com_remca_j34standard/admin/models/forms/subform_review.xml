<form
    addfieldpath="/administrator/components/com_remca/models/fields"
    addrulepath="/administrator/components/com_remca/models/rules"

>
    <fieldset name="basic_details"
    >
        <field name="buttonspacer"
            type="spacer"
            label="JGLOBAL_ACTION_PERMISSIONS_LABEL"
            description="JGLOBAL_ACTION_PERMISSIONS_DESCRIPTION"
        />
    </fieldset>
    <fieldset name="fieldset_review_fs"
        label="COM_REMCA_REVIEWS_FIELDSET_REVIEW_FS_LABEL"
        description="COM_REMCA_REVIEWS_FIELDSET_REVIEW_FS_DESC"
    >
        <field name="id_house"
            type="modal_houses"
            label="COM_REMCA_REVIEWS_FIELD_ID_HOUSE_LABEL"
            description="COM_REMCA_REVIEWS_FIELD_ID_HOUSE_DESC"
            class="modal"
			link="1"
			default="0"
			type_alias="com_remca.house" 
        >
        </field>  
        <field name="id_user"
            type="modal_jusers"
            label="COM_REMCA_REVIEWS_FIELD_ID_USER_LABEL"
            description="COM_REMCA_REVIEWS_FIELD_ID_USER_DESC"
            class="modal"
			default="0"
			type_alias="com_remca.user" 
        >
        </field>  
        <field name="user_name"
            type="text"
            label="COM_REMCA_REVIEWS_FIELD_USER_NAME_LABEL"
            description="COM_REMCA_REVIEWS_FIELD_USER_NAME_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field name="user_email"
            type="text"
            label="COM_REMCA_REVIEWS_FIELD_USER_EMAIL_LABEL"
            description="COM_REMCA_REVIEWS_FIELD_USER_EMAIL_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field name="date"
            type="calendar"
            label="COM_REMCA_REVIEWS_FIELD_DATE_LABEL"
            description="COM_REMCA_REVIEWS_FIELD_DATE_DESC"
            class="inputbox validate-date"
			size="22"
			maxlength="25"
			format="%Y-%m-%d"
			filter="fixed"
			validate="date"
        >
        </field>  
        <field name="rating"
            type="integer"
            label="COM_REMCA_REVIEWS_FIELD_RATING_LABEL"
            description="COM_REMCA_REVIEWS_FIELD_RATING_DESC"
            class="inputbox"
			size="1"
			default="0"
        >
        </field>  
        <field name="title"
            type="text"
            label="COM_REMCA_REVIEWS_FIELD_TITLE_LABEL"
            description="COM_REMCA_REVIEWS_FIELD_TITLE_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field name="comment"
            type="editor"
            label="COM_REMCA_REVIEWS_FIELD_COMMENT_LABEL"
            description="COM_REMCA_REVIEWS_FIELD_COMMENT_DESC"
            width="100%"
			height="250"
			cols="50"
			rows="5"
			buttons="*"
			hide_buttons="*"
			default=""
        >
        </field>  
    </fieldset>
    <fieldset name="publishing"
		label="COM_REMCA_FIELDSET_PUBLISHING_LABEL"
    >

    </fieldset>
</form>
