<form
    addfieldpath="/administrator/components/com_remca/models/fields"
    addrulepath="/administrator/components/com_remca/models/rules"

>
    <fieldset name="basic_details"
    >
        <field name="id"
		    type="text"
            label="JGLOBAL_FIELD_ID_LABEL"
            description ="JGLOBAL_FIELD_ID_DESC"
			readonly="true"
			class="readonly"
            default="0"
		/>
        <field name="name"
		    type="text"
			label="COM_REMCA_FIELD_NAME_LABEL"
			description="COM_REMCA_WA_TITLE_CONVERSATIONS_FIELD_NAME_DESC"
			size="50"
			required="true"
		/>
        <field name="state"
    		type="list"
			label="JSTATUS"
			description="COM_REMCA_WA_TITLE_CONVERSATIONS_FIELD_STATUS_DESC"
			class="chzn-color-state"
			size="1"
			default="1"
		>
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASH</option>
        </field>
        <field name="buttonspacer"
            type="spacer"
            label="JGLOBAL_ACTION_PERMISSIONS_LABEL"
            description="JGLOBAL_ACTION_PERMISSIONS_DESCRIPTION"
        />

        <field name="ordering"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"
			type="remcaordering"
			table="#__rem_wa_title_conversations"
		/>
    </fieldset>
    <fieldset name="publishing"
		label="COM_REMCA_FIELDSET_PUBLISHING_LABEL"
    >
        <field name="created_by"
            type="user"
			label="COM_REMCA_FIELD_CREATED_BY_LABEL"
			description="COM_REMCA_WA_TITLE_CONVERSATIONS_FIELD_CREATED_BY_DESC"
		/>
        <field name="created"
            type="calendar"
            label="COM_REMCA_FIELD_CREATED_LABEL"
			description="COM_REMCA_WA_TITLE_CONVERSATIONS_FIELD_CREATED_DESC"
			size="22"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
		/>
    </fieldset>
</form>
