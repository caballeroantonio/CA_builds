<form
    addfieldpath="/administrator/components/com_remca/models/fields"
    addrulepath="/administrator/components/com_remca/models/rules"

>
    <fieldset
        name="basic_details"
    >
        <field
		    name="id"
		    type="text"
            label="JGLOBAL_FIELD_ID_LABEL"
            description ="JGLOBAL_FIELD_ID_DESC"
			readonly="true"
			class="readonly"
            default="0"
		/>
        <field
		    name="name"
		    type="text"
			label="COM_REMCA_FIELD_NAME_LABEL"
			description="COM_REMCA_CONST_FIELD_NAME_DESC"
			size="50"
			required="true"
		/>
        <field
            name="version_note"
            type="text"
            label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"
			class="span12"
			size="45"
		/>
        <field
            name="buttonspacer"
            type="spacer"
            label="JGLOBAL_ACTION_PERMISSIONS_LABEL"
            description="JGLOBAL_ACTION_PERMISSIONS_DESCRIPTION"
        />

    </fieldset>
    <fieldset
        name="fieldset_jos_rem_const_fs"
        label="COM_REMCA_CONST_FIELDSET_JOS_REM_CONST_FS_LABEL"
        description="COM_REMCA_CONST_FIELDSET_JOS_REM_CONST_FS_DESC"
    >
        <field
            name="const"
            type="text"
            label="COM_REMCA_CONST_FIELD_CONST_LABEL"
            description="COM_REMCA_CONST_FIELD_CONST_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            name="sys_type"
            type="text"
            label="COM_REMCA_CONST_FIELD_SYS_TYPE_LABEL"
            description="COM_REMCA_CONST_FIELD_SYS_TYPE_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
    </fieldset>
    <fieldset
        name="publishing"
		label="COM_REMCA_FIELDSET_PUBLISHING_LABEL"
    >
        <field
            name="version"
            type="text"
			label="COM_REMCA_FIELD_VERSION_LABEL"
            description="COM_REMCA_CONST_FIELD_VERSION_DESC"
			class="readonly"
			size="6"
			readonly="true"
			filter="unset"
		/>
    </fieldset>
</form>
