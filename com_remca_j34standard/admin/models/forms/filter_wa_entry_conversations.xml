<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_REMCA_WA_ENTRY_CONVERSATIONS_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>
        <field
			name="id_wa_title_conversation"
			type="sql"
			label="COM_REMCA_FILTER_ID_WA_TITLE_CONVERSATION_LABEL"
			description="COM_REMCA_FILTER_ID_WA_TITLE_CONVERSATION_DESC"
			onchange="this.form.submit();"
			query="SELECT DISTINCT `a`.`ID_WA_TITLE_CONVERSATION` AS `value`, `a`.`ID_WA_TITLE_CONVERSATION` AS `text`
		            FROM `#__rem_wa_entry_conversations` AS `a` 
		            ORDER BY `a`.`ID_WA_TITLE_CONVERSATION`"
			key_field="value"
			value_field="text"
		>
            <option value="">COM_REMCA_WA_ENTRY_CONVERSATIONS_SELECT_ID_WA_TITLE_CONVERSATION</option>
        </field>
        <field
			name="phone"
			type="sql"
			label="COM_REMCA_FILTER_PHONE_LABEL"
			description="COM_REMCA_FILTER_PHONE_DESC"
			onchange="this.form.submit();"
			query="SELECT DISTINCT `a`.`PHONE` AS `value`, `a`.`PHONE` AS `text`
		            FROM `#__rem_wa_entry_conversations` AS `a` 
		            ORDER BY `a`.`PHONE`"
			key_field="value"
			value_field="text"
		>
            <option value="">COM_REMCA_WA_ENTRY_CONVERSATIONS_SELECT_PHONE</option>
        </field>
        <field
			name="state"
			type="status"
			label="COM_REMCA_FILTER_STATUS_LABEL"
			description="COM_REMCA_FILTER_STATUS_DESC"
			onchange="this.form.submit();"
		>
            <option value="">COM_REMCA_SELECT_STATUS</option>
        </field>
        <field
			name="created_by"
			type="sql"
			label="COM_REMCA_FILTER_CREATED_BY_LABEL"
			description="COM_REMCA_FILTER_CREATED_BY_DESC"
			onchange="this.form.submit();"
			query="SELECT `u`.`id` AS `value`, `u`.`name` AS `text`
			        FROM `#__users` AS `u`
			        INNER JOIN `#__rem_wa_entry_conversations` AS `a` ON `a`.`created_by` = `u`.`id`
			        GROUP BY `u`.`id`, `u`.`name`
			        ORDER BY `u`.`name`"
			key_field="value"
			value_field="text"			        			
		>
            <option value="">COM_REMCA_SELECT_CREATED_BY</option>
        </field>
        <field
			name="category_id"
			type="category"
			label="JOPTION_FILTER_CATEGORY"
			description="JOPTION_FILTER_CATEGORY_DESC"
			extension="com_remca"
			onchange="this.form.submit();"
			>
            <option value="">JOPTION_SELECT_CATEGORY</option>
        </field>
    </fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="JGLOBAL_SORT_BY"
			onchange="this.form.submit();"
			default=""
		>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.ordering ASC">JGRID_HEADING_ORDERING_ASC</option>
			<option value="a.ordering DESC">JGRID_HEADING_ORDERING_DESC</option>
            <option value="a.id_wa_title_conversation ASC">COM_REMCA_WA_ENTRY_CONVERSATIONS_FIELD_ID_WA_TITLE_CONVERSATION_SORT_ASC_LABEL</option>
            <option value="a.id_wa_title_conversation DESC">COM_REMCA_WA_ENTRY_CONVERSATIONS_FIELD_ID_WA_TITLE_CONVERSATION_SORT_DESC_LABEL</option>
            <option value="a.phone ASC">COM_REMCA_WA_ENTRY_CONVERSATIONS_FIELD_PHONE_SORT_ASC_LABEL</option>
            <option value="a.phone DESC">COM_REMCA_WA_ENTRY_CONVERSATIONS_FIELD_PHONE_SORT_DESC_LABEL</option>
			<option value="a.state ASC">JSTATUS_ASC</option>
			<option value="a.state DESC">JSTATUS_DESC</option>
            <option value="created_by_name ASC">COM_REMCA_FIELD_CREATED_BY_SORT_ASC_LABEL</option>
            <option value="created_by_name DESC">COM_REMCA_FIELD_CREATED_BY_SORT_DESC_LABEL</option>
			<option value="a.created ASC">JDATE_ASC</option>
			<option value="a.created DESC">JDATE_DESC</option>
			<option value="category_title ASC">JCATEGORY_ASC</option>
			<option value="category_title DESC">JCATEGORY_DESC</option>
			<option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
        </field>
        <field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_REMCA_LIST_LIMIT_LABEL"
			description="COM_REMCA_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
