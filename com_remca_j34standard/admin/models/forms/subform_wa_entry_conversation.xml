<form
    addfieldpath="/administrator/components/com_remca/models/fields"
    addrulepath="/administrator/components/com_remca/models/rules"

>
    <fieldset name="basic_details"
    >
        <field name="catid"
            type="categoryedit"
			label="JCATEGORY"
			description="JFIELD_CATEGORY_DESC"
            extension="com_remca"
			required="true"
            addfieldpath="/administrator/components/com_categories/models/fields"
		>
        </field>
        <field name="buttonspacer"
            type="spacer"
            label="JGLOBAL_ACTION_PERMISSIONS_LABEL"
            description="JGLOBAL_ACTION_PERMISSIONS_DESCRIPTION"
        />
        <field
		    name="description"
            type="editor"
			label="JGLOBAL_DESCRIPTION"
            description="COM_REMCA_WA_ENTRY_CONVERSATIONS_FIELD_DESCRIPTION_DESC"
            filter="JComponentHelper::filterText"
            buttons="true"
            hide="article"
        />
    </fieldset>
    <fieldset name="fieldset_wa_entry_conversations_fs"
        label="COM_REMCA_WA_ENTRY_CONVERSATIONS_FIELDSET_WA_ENTRY_CONVERSATIONS_FS_LABEL"
        description="COM_REMCA_WA_ENTRY_CONVERSATIONS_FIELDSET_WA_ENTRY_CONVERSATIONS_FS_DESC"
    >
        <field name="phone"
            type="tel"
            label="COM_REMCA_WA_ENTRY_CONVERSATIONS_FIELD_PHONE_LABEL"
            description="COM_REMCA_WA_ENTRY_CONVERSATIONS_FIELD_PHONE_DESC"
            class="inputbox"
			size="25"
			maxlength="50"
			filter="tel"
			required="true"
        >
        </field>  
        <field name="id_wa_title_conversation"
            type="modal_wa_title_conversations"
            label="COM_REMCA_WA_ENTRY_CONVERSATIONS_FIELD_ID_WA_TITLE_CONVERSATION_LABEL"
            description="COM_REMCA_WA_ENTRY_CONVERSATIONS_FIELD_ID_WA_TITLE_CONVERSATION_DESC"
            class="modal"
			required="true"
			default="0"
        >
        </field>  
        <field name="action"
            type="list"
            label="COM_REMCA_WA_ENTRY_CONVERSATIONS_FIELD_ACTION_LABEL"
            description="COM_REMCA_WA_ENTRY_CONVERSATIONS_FIELD_ACTION_DESC"
            class="inputbox"
			size="1"
			required="true"
        >
            <option	value="Pide">COM_REMCA_WA_ENTRY_CONVERSATIONS_ACTION_VALUE_PIDE</option>
			<option	value="Ofrece">COM_REMCA_WA_ENTRY_CONVERSATIONS_ACTION_VALUE_OFRECE</option>
			<option	value="say">COM_REMCA_WA_ENTRY_CONVERSATIONS_ACTION_VALUE_DICE</option>
        </field>  
    </fieldset>
    <fieldset name="publishing"
		label="COM_REMCA_FIELDSET_PUBLISHING_LABEL"
    >
        <field name="created_by"
            type="user"
			label="COM_REMCA_FIELD_CREATED_BY_LABEL"
			description="COM_REMCA_WA_ENTRY_CONVERSATIONS_FIELD_CREATED_BY_DESC"
		/>
        <field name="created"
            type="calendar"
            label="COM_REMCA_FIELD_CREATED_LABEL"
			description="COM_REMCA_WA_ENTRY_CONVERSATIONS_FIELD_CREATED_DESC"
			size="22"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
		/>

    </fieldset>
</form>
