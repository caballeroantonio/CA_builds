<form
    addfieldpath="/administrator/components/com_jtca/models/fields"
    addrulepath="/administrator/components/com_jtca/models/rules"

>
    <fieldset name="basic_details"
    >
        <field name="id"
		    type="text"
            label="JGLOBAL_FIELD_ID_LABEL"
            description ="JGLOBAL_FIELD_ID_DESC"
			readonly="true"
			class="readonly"
            default="0"
		/>
        <field name="name"
		    type="text"
			label="COM_JTCA_FIELD_NAME_LABEL"
			description="COM_JTCA_EXPEDIENTES_FIELD_NAME_DESC"
			size="50"
			required="true"
		/>
        <field name="version_note"
            type="text"
            label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"
			class="span12"
			size="45"
		/>
        <field name="state"
    		type="list"
			label="JSTATUS"
			description="COM_JTCA_EXPEDIENTES_FIELD_STATUS_DESC"
			class="chzn-color-state"
			size="1"
			default="1"
		>
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASH</option>
        </field>
        <field name="buttonspacer"
            type="spacer"
            label="JGLOBAL_ACTION_PERMISSIONS_LABEL"
            description="JGLOBAL_ACTION_PERMISSIONS_DESCRIPTION"
        />

    </fieldset>
    <fieldset name="fieldset_expedientes_fs"
        label="COM_JTCA_EXPEDIENTES_FIELDSET_EXPEDIENTES_FS_LABEL"
        description="COM_JTCA_EXPEDIENTES_FIELDSET_EXPEDIENTES_FS_DESC"
    >
        <field name="id_organo"
            type="sql"
            label="COM_JTCA_EXPEDIENTES_FIELD_ID_ORGANO_LABEL"
            description="COM_JTCA_EXPEDIENTES_FIELD_ID_ORGANO_DESC"
            class="inputbox"
			size="1"
			query="SELECT id, organo FROM jtc_organos"
			key_field="id"
			value_field="organo"
        >
            <option value="">COM_JTCA_EXPEDIENTES_SELECT_ID_ORGANO</option>
        </field>  
        <field name="numero"
            type="text"
            label="COM_JTCA_EXPEDIENTES_FIELD_NUMERO_LABEL"
            description="COM_JTCA_EXPEDIENTES_FIELD_NUMERO_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field name="ano"
            type="integer"
            label="COM_JTCA_EXPEDIENTES_FIELD_ANO_LABEL"
            description="COM_JTCA_EXPEDIENTES_FIELD_ANO_DESC"
            class="inputbox"
			size="1"
			default="0"
        >
        </field>  
        <field name="bis"
            type="integer"
            label="COM_JTCA_EXPEDIENTES_FIELD_BIS_LABEL"
            description="COM_JTCA_EXPEDIENTES_FIELD_BIS_DESC"
            class="inputbox"
			size="1"
			default="0"
        >
        </field>  
        <field name="nrecurso"
            type="integer"
            label="COM_JTCA_EXPEDIENTES_FIELD_NRECURSO_LABEL"
            description="COM_JTCA_EXPEDIENTES_FIELD_NRECURSO_DESC"
            class="inputbox"
			size="1"
			default="0"
        >
        </field>  
        <field name="id_tipoarchivo"
            type="combo_sql"
            label="COM_JTCA_EXPEDIENTES_FIELD_ID_TIPOARCHIVO_LABEL"
            description="COM_JTCA_EXPEDIENTES_FIELD_ID_TIPOARCHIVO_DESC"
        >
        </field>  
        <field name="txt_tipojuicio"
            type="text"
            label="COM_JTCA_EXPEDIENTES_FIELD_TXT_TIPOJUICIO_LABEL"
            description="COM_JTCA_EXPEDIENTES_FIELD_TXT_TIPOJUICIO_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field name="id_tipojuicio"
            type="combo_sql"
            label="COM_JTCA_EXPEDIENTES_FIELD_ID_TIPOJUICIO_LABEL"
            description="COM_JTCA_EXPEDIENTES_FIELD_ID_TIPOJUICIO_DESC"
        >
        </field>  
        <field name="partescontenciosas"
            type="subform"
            label="COM_JTCA_EXPEDIENTES_FIELD_PARTESCONTENCIOSAS_LABEL"
            description="COM_JTCA_EXPEDIENTES_FIELD_PARTESCONTENCIOSAS_DESC"
            multiple="true"
			default="[ ]"
			layout="joomla.form.field.subform.repeatable-table" groupByFieldset="true"
			formsource="administrator/components/com_jtca/models/forms/slpartecontenciosa.xml" 
			type_alias="com_jtca.slpartecontenciosa" 
        >
        </field>  
        <field name="id_opc"
            type="integer"
            label="COM_JTCA_EXPEDIENTES_FIELD_ID_OPC_LABEL"
            description="COM_JTCA_EXPEDIENTES_FIELD_ID_OPC_DESC"
            class="inputbox"
			size="1"
			default="0"
        >
        </field>  
        <field name="txt_opc"
            type="editor"
            label="COM_JTCA_EXPEDIENTES_FIELD_TXT_OPC_LABEL"
            description="COM_JTCA_EXPEDIENTES_FIELD_TXT_OPC_DESC"
            width="100%"
			height="250"
			cols="50"
			rows="5"
			buttons="*"
			hide_buttons="*"
			default=""
        >
        </field>  
        <field name="delito"
            type="text"
            label="COM_JTCA_EXPEDIENTES_FIELD_DELITO_LABEL"
            description="COM_JTCA_EXPEDIENTES_FIELD_DELITO_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field name="pena"
            type="text"
            label="COM_JTCA_EXPEDIENTES_FIELD_PENA_LABEL"
            description="COM_JTCA_EXPEDIENTES_FIELD_PENA_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field name="id_exp_orig"
            type="modal_expedientes"
            label="COM_JTCA_EXPEDIENTES_FIELD_ID_EXP_ORIG_LABEL"
            description="COM_JTCA_EXPEDIENTES_FIELD_ID_EXP_ORIG_DESC"
            class="modal"
			default="0"
			type_alias="com_jtca.expediente" 
        >
        </field>  
    </fieldset>
    <fieldset name="publishing"
		label="COM_JTCA_FIELDSET_PUBLISHING_LABEL"
    >
        <field name="created_by"
            type="user"
			label="COM_JTCA_FIELD_CREATED_BY_LABEL"
			description="COM_JTCA_EXPEDIENTES_FIELD_CREATED_BY_DESC"
		/>
        <field name="created"
            type="calendar"
            label="COM_JTCA_FIELD_CREATED_LABEL"
			description="COM_JTCA_EXPEDIENTES_FIELD_CREATED_DESC"
			size="22"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
		/>
        <field name="modified"
            type="calendar"
			label="COM_JTCA_FIELD_MODIFIED_LABEL"
			description="COM_JTCA_EXPEDIENTES_FIELD_MODIFIED_DESC"
            class="readonly"
			size="22"
			readonly="true"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
		/>
        <field name="modified_by"
            type="user"
		    label="COM_JTCA_FIELD_MODIFIED_BY_LABEL"
		    class="readonly"
		    readonly="true"
		    filter="unset"
		/>
        <field name="version"
            type="text"
			label="COM_JTCA_FIELD_VERSION_LABEL"
            description="COM_JTCA_EXPEDIENTES_FIELD_VERSION_DESC"
			class="readonly"
			size="6"
			readonly="true"
			filter="unset"
		/>
    </fieldset>
</form>
